<style>
  .free-shipping-independent {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px 0;
    position: relative;
    overflow: hidden;
    border-top-left-radius: {{ section.settings.section_border_radius_top }}px;
    border-top-right-radius: {{ section.settings.section_border_radius_top }}px;
    border-bottom-left-radius: {{ section.settings.section_border_radius_bottom }}px;
    border-bottom-right-radius: {{ section.settings.section_border_radius_bottom }}px;
  }

  .free-shipping-independent .shipping-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 2;
  }

  /* Static Decorative Icons - No Floating */
  .free-shipping-independent .static-giraffe {
    position: absolute;
    top: {{ section.settings.giraffe_top_desktop }}%;
    left: {{ section.settings.giraffe_left_desktop }}%;
    width: {{ section.settings.giraffe_size_desktop }}px;
    z-index: 1;
    opacity: 0.9;
  }

  .free-shipping-independent .static-leaf {
    position: absolute;
    bottom: {{ section.settings.leaf_bottom_desktop }}%;
    right: {{ section.settings.leaf_right_desktop }}%;
    width: {{ section.settings.leaf_size_desktop }}px;
    z-index: 1;
    opacity: 0.8;
  }

  /* Section Header */
  .free-shipping-independent .shipping-header {
    text-align: center;
    margin-bottom: 2rem;
    margin-top: 0;
    padding-top: 0;
    position: relative;
  }

  .free-shipping-independent .shipping-title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: bold;
    color: {{ section.settings.title_color }};
    margin-bottom: 1rem;
    margin-top: 0;
    line-height: 1.2;
  }

  /* Curvy Line Icon */
  .free-shipping-independent .shipping-curvy-line-icon {
    display: block;
    position: absolute;
    left: {{ section.settings.curvy_line_x_position }}%;
    transform: translateX(-50%);
    top: {{ section.settings.curvy_line_y_position }}px;
    width: {{ section.settings.curvy_line_size }}px;
    height: auto;
    z-index: 3;
  }

  .free-shipping-independent .shipping-description {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Shipping Cards Grid */
  .free-shipping-independent .shipping-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .free-shipping-independent .shipping-card {
    background: white;
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: 2.5rem 2rem;
    text-align: center;
    box-shadow: {{ section.settings.card_shadow_x }}px {{ section.settings.card_shadow_y }}px {{ section.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ section.settings.card_shadow_opacity | divided_by: 100.0 }});
    transition: all 0.3s ease;
    position: relative;
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
  }

  .free-shipping-independent .shipping-card:hover {
    transform: translateY(-0px);
    box-shadow: {{ section.settings.card_shadow_hover_x }}px {{ section.settings.card_shadow_hover_y }}px {{ section.settings.card_shadow_hover_blur }}px rgba(0, 0, 0, {{ section.settings.card_shadow_hover_opacity | divided_by: 100.0 }});
  }

  .free-shipping-independent .shipping-icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: {{ section.settings.icon_font_size }}px;
  }

  .free-shipping-independent .shipping-icon img {
    width: {{ section.settings.icon_image_size }}px;
    height: {{ section.settings.icon_image_size }}px;
    object-fit: contain;
  }

  .free-shipping-independent .shipping-card-title {
    font-size: {{ section.settings.card_title_size }}px;
    font-weight: 600;
    color: {{ section.settings.card_title_color }};
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .free-shipping-independent .shipping-card-description {
    font-size: {{ section.settings.card_desc_size }}px;
    color: {{ section.settings.card_desc_color }};
    line-height: 1.6;
  }

  /* Mobile Responsive */
  @media screen and (max-width: 768px) {
    .free-shipping-independent {
      padding: {{ section.settings.section_padding_top_mobile }}px 0 {{ section.settings.section_padding_bottom_mobile }}px 0;
    }

    .free-shipping-independent .shipping-container {
      padding: 0 1rem;
    }

    .free-shipping-independent .shipping-title {
      font-size: {{ section.settings.title_size | times: 0.8 }}px;
    }

    .free-shipping-independent .shipping-curvy-line-icon {
      width: {{ section.settings.curvy_line_size_mobile }}px;
      top: {{ section.settings.curvy_line_y_position_mobile }}px;
      left: {{ section.settings.curvy_line_x_position_mobile }}%;
    }

    .free-shipping-independent .shipping-description {
      font-size: {{ section.settings.description_size | times: 0.9 }}px;
    }

    .free-shipping-independent .shipping-cards {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .free-shipping-independent .shipping-card {
      padding: 2rem 1.5rem;
    }

    .free-shipping-independent .shipping-icon {
      width: {{ section.settings.icon_size | times: 0.8 }}px;
      height: {{ section.settings.icon_size | times: 0.8 }}px;
      margin-bottom: 1rem;
      font-size: {{ section.settings.icon_font_size | times: 0.8 }}px;
    }

    .free-shipping-independent .static-giraffe {
      top: {{ section.settings.giraffe_top_mobile }}% !important;
      left: {{ section.settings.giraffe_left_mobile }}% !important;
      width: {{ section.settings.giraffe_size_mobile }}px !important;
    }

    .free-shipping-independent .static-leaf {
      bottom: {{ section.settings.leaf_bottom_mobile }}% !important;
      right: {{ section.settings.leaf_right_mobile }}% !important;
      width: {{ section.settings.leaf_size_mobile }}px !important;
    }
  }

  /* Tablet */
  @media screen and (min-width: 769px) and (max-width: 1024px) {
    .free-shipping-independent .shipping-cards {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 1025px) {
    .free-shipping-independent .shipping-cards {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>

<section class="free-shipping-independent">
  <!-- Static Decorative Icons -->
  {% if section.settings.giraffe_icon != blank %}
    <img
      src="{{ section.settings.giraffe_icon | image_url: width: 200 }}"
      alt="Giraffe decoration"
      class="static-giraffe"
      loading="lazy"
    >
  {% endif %}

  {% if section.settings.leaf_icon != blank %}
    <img
      src="{{ section.settings.leaf_icon | image_url: width: 200 }}"
      alt="Leaf decoration"
      class="static-leaf"
      loading="lazy"
    >
  {% endif %}

  <div class="shipping-container">
    <!-- Section Header -->
    <div class="shipping-header">
      {% if section.settings.title != blank %}
        <h2 class="shipping-title">{{ section.settings.title | escape }}</h2>
      {% endif %}

      <!-- Curvy Line Icon -->
      {% if section.settings.curvy_line_icon != blank %}
        <img
          src="{{ section.settings.curvy_line_icon | image_url: width: 400 }}"
          alt="Decorative curvy line"
          class="shipping-curvy-line-icon"
          loading="lazy"
        >
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="shipping-description">{{ section.settings.description }}</div>
      {% endif %}
    </div>

    <!-- Shipping Cards -->
    <div class="shipping-cards">
      {% for block in section.blocks %}
        <div class="shipping-card" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <div class="shipping-icon">
              <img
                src="{{ block.settings.icon | image_url: width: 80 }}"
                alt="{{ block.settings.icon.alt | default: block.settings.title }}"
                loading="lazy"
              >
            </div>
          {% else %}
            <div class="shipping-icon">
              <span>{{ block.settings.icon_text | default: 'âœ¨' }}</span>
            </div>
          {% endif %}

          {% if block.settings.title != blank %}
            <h3 class="shipping-card-title">{{ block.settings.title | escape }}</h3>
          {% endif %}

          {% if block.settings.description != blank %}
            <p class="shipping-card-description">{{ block.settings.description | escape }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

