<style>
  .why-choose-us-section {
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    position: relative;
    overflow: hidden;
  }

  .why-choose-us-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 2;
  }

  /* Static Decorative Icons - Fixed Proportional Scaling */
  .floating-rainbow {
    position: absolute;
    top: 15%;
    left: 5%;
    width: 120px;
    height: 120px;
    object-fit: contain;
    z-index: 1;
  }

  .floating-star {
    position: absolute;
    top: 20%;
    right: 8%;
    width: 50px;
    height: 50px;
    object-fit: contain;
    z-index: 1;
  }

  .floating-icon-1 {
    position: absolute;
    top: {{ section.settings.icon1_top_desktop }}%;
    left: {{ section.settings.icon1_left_desktop }}%;
    width: {{ section.settings.icon1_size_desktop }}px;
    height: {{ section.settings.icon1_size_desktop }}px;
    object-fit: contain;
    z-index: 1;
  }

  .floating-icon-2 {
    position: absolute;
    top: {{ section.settings.icon2_top_desktop }}%;
    right: {{ section.settings.icon2_right_desktop }}%;
    width: {{ section.settings.icon2_size_desktop }}px;
    height: {{ section.settings.icon2_size_desktop }}px;
    object-fit: contain;
    z-index: 1;
  }

  .floating-icon-3 {
    position: absolute;
    bottom: {{ section.settings.icon3_bottom_desktop }}%;
    left: {{ section.settings.icon3_left_desktop }}%;
    width: {{ section.settings.icon3_size_desktop }}px;
    height: {{ section.settings.icon3_size_desktop }}px;
    object-fit: contain;
    z-index: 1;
  }

  /* Section Layout - Simple Grid */
  .why-choose-us-main-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto 1fr;
    gap: 3rem;
    grid-template-areas:
      ". header"
      "image cards";
  }

  /* Header Area */
  .why-choose-us-header-area {
    grid-area: header;
  }

  .why-choose-us-title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: bold;
    color: {{ section.settings.title_color }};
    margin: 0 0 1rem 0;
    line-height: 1.2;
    position: relative;
  }

  /* Curvy line decoration under heading */
  .why-choose-us-title::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -{{ section.settings.line_icon_overlap }}px;
    width: {{ section.settings.line_icon_width }}px;
    height: {{ section.settings.line_icon_height }}px;
    background-image: url("{{ section.settings.line_icon | image_url }}");
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
    z-index: 1;
  }

  .why-choose-us-title-wrapper {
    margin-bottom: {{ section.settings.line_icon_spacing }}px;
  }

  .why-choose-us-description {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.text_color }};
    line-height: 1.6;
    margin: 0;
  }

  /* Image Area */
  .why-choose-us-image-area {
    grid-area: image;
  }

  .why-choose-us-feature-image {
    width: 100%;
    height: auto;
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  /* Cards Area */
  .why-choose-us-cards-area {
    grid-area: cards;
  }

  .why-choose-us-features-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    height: 100%;
  }

  .why-choose-us-feature-card {
    background-color: white;
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: 2rem 1.5rem;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .why-choose-us-feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  }

  .why-choose-us-feature-icon {
    width: auto;
    height: auto;
    margin: 0 auto 1.5rem;
    border-radius: 0;
    background-color: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 48px;
  }

  .why-choose-us-feature-icon img {
    width: 48px;
    height: 48px;
    object-fit: contain;
  }

  .why-choose-us-feature-title {
    font-size: {{ section.settings.feature_title_size }}px;
    font-weight: 600;
    color: {{ section.settings.feature_title_color }};
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .why-choose-us-feature-description {
    font-size: {{ section.settings.feature_desc_size }}px;
    color: {{ section.settings.feature_desc_color }};
    line-height: 1.5;
  }

  /* Mobile Responsive */
  @media screen and (max-width: 768px) {
    .why-choose-us-section {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }

    .why-choose-us-container {
      padding: 0 1rem;
    }

    .why-choose-us-main-grid {
      grid-template-columns: 1fr;
      grid-template-rows: auto auto auto;
      gap: 2rem;
      grid-template-areas:
        "header"
        "image"
        "cards";
    }

    .why-choose-us-title {
      font-size: {{ section.settings.title_size | times: 0.8 }}px;
      text-align: center;
    }

    .why-choose-us-title::after {
      left: 50%;
      transform: translateX(-50%);
      width: {{ section.settings.line_icon_width | times: 0.8 }}px;
      height: {{ section.settings.line_icon_height | times: 0.8 }}px;
      bottom: -{{ section.settings.line_icon_overlap | times: 0.8 }}px;
    }

    .why-choose-us-title-wrapper {
      margin-bottom: {{ section.settings.line_icon_spacing | times: 0.7 }}px;
    }

    .why-choose-us-description {
      font-size: {{ section.settings.description_size | times: 0.9 }}px;
      text-align: center;
    }

    .why-choose-us-features-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .why-choose-us-feature-card {
      padding: 1.5rem;
    }

    .why-choose-us-feature-icon {
      font-size: 40px;
    }

    .why-choose-us-feature-icon img {
      width: 40px;
      height: 40px;
    }

    /* Mobile Static Icon Positions */
    .floating-rainbow {
      width: 80px;
      height: 80px;
      top: 5%;
      left: 2%;
    }

    .floating-star {
      width: 35px;
      height: 35px;
      top: 10%;
      right: 5%;
    }

    .floating-icon-1 {
      top: {{ section.settings.icon1_top_mobile }}% !important;
      left: {{ section.settings.icon1_left_mobile }}% !important;
      width: {{ section.settings.icon1_size_mobile }}px !important;
      height: {{ section.settings.icon1_size_mobile }}px !important;
    }

    .floating-icon-2 {
      top: {{ section.settings.icon2_top_mobile }}% !important;
      right: {{ section.settings.icon2_right_mobile }}% !important;
      width: {{ section.settings.icon2_size_mobile }}px !important;
      height: {{ section.settings.icon2_size_mobile }}px !important;
    }

    .floating-icon-3 {
      bottom: {{ section.settings.icon3_bottom_mobile }}% !important;
      left: {{ section.settings.icon3_left_mobile }}% !important;
      width: {{ section.settings.icon3_size_mobile }}px !important;
      height: {{ section.settings.icon3_size_mobile }}px !important;
    }
  }

  /* Tablet Responsive */
  @media screen and (min-width: 769px) and (max-width: 1024px) {
    .why-choose-us-main-grid {
      gap: 2rem;
    }

    .why-choose-us-features-grid {
      gap: 1rem;
    }

    .why-choose-us-feature-card {
      padding: 1.5rem;
    }
  }
</style>

<section class="why-choose-us-section">
  <!-- Static Decorative Icons -->
  {% if section.settings.floating_icon_1 != blank %}
    <img
      src="{{ section.settings.floating_icon_1 | image_url: width: 200 }}"
      alt="Decoration 1"
      class="floating-icon-1"
      loading="lazy"
    >
  {% endif %}

  {% if section.settings.floating_icon_2 != blank %}
    <img
      src="{{ section.settings.floating_icon_2 | image_url: width: 200 }}"
      alt="Decoration 2"
      class="floating-icon-2"
      loading="lazy"
    >
  {% endif %}

  {% if section.settings.floating_icon_3 != blank %}
    <img
      src="{{ section.settings.floating_icon_3 | image_url: width: 200 }}"
      alt="Decoration 3"
      class="floating-icon-3"
      loading="lazy"
    >
  {% endif %}

  {% if section.settings.rainbow_icon != blank %}
    <img
      src="{{ section.settings.rainbow_icon | image_url: width: 240 }}"
      alt="Rainbow decoration"
      class="floating-rainbow"
      loading="lazy"
    >
  {% endif %}

  {% if section.settings.star_icon != blank %}
    <img
      src="{{ section.settings.star_icon | image_url: width: 100 }}"
      alt="Star decoration"
      class="floating-star"
      loading="lazy"
    >
  {% endif %}

  <div class="why-choose-us-container">
    <!-- Main Grid Layout -->
    <div class="why-choose-us-main-grid">
      <!-- Header Area (Top Right) -->
      <div class="why-choose-us-header-area">
        {% if section.settings.title != blank %}
          <div class="why-choose-us-title-wrapper">
            <h2 class="why-choose-us-title">{{ section.settings.title | escape }}</h2>
          </div>
        {% endif %}

        {% if section.settings.description != blank %}
          <div class="why-choose-us-description">{{ section.settings.description }}</div>
        {% endif %}
      </div>

      <!-- Image Area (Bottom Left) -->
      <div class="why-choose-us-image-area">
        {% if section.settings.feature_image != blank %}
          <img
            src="{{ section.settings.feature_image | image_url: width: 800 }}"
            alt="{{ section.settings.feature_image.alt | default: 'Why choose us feature image' }}"
            class="why-choose-us-feature-image"
            loading="lazy"
            width="800"
            height="600"
          >
        {% else %}
          <div
            class="why-choose-us-feature-image"
            style="background-color: #f5f5f5; height: 400px; display: flex; align-items: center; justify-content: center; color: #999;"
          >
            Upload Feature Image
          </div>
        {% endif %}
      </div>

      <!-- Cards Area (Bottom Right) -->
      <div class="why-choose-us-cards-area">
        <div class="why-choose-us-features-grid">
          {% for block in section.blocks %}
            <div class="why-choose-us-feature-card" {{ block.shopify_attributes }}>
              {% if block.settings.icon != blank %}
                <div class="why-choose-us-feature-icon">
                  <img
                    src="{{ block.settings.icon | image_url: width: 60 }}"
                    alt="{{ block.settings.icon.alt | default: block.settings.title }}"
                    loading="lazy"
                  >
                </div>
              {% else %}
                <div class="why-choose-us-feature-icon">
                  <span>{{ block.settings.icon_text | default: 'üåü' }}</span>
                </div>
              {% endif %}

              {% if block.settings.title != blank %}
                <h3 class="why-choose-us-feature-title">{{ block.settings.title | escape }}</h3>
              {% endif %}

              {% if block.settings.description != blank %}
                <p class="why-choose-us-feature-description">{{ block.settings.description | escape }}</p>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

