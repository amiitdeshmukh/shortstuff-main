<style>
  .why-choose-us-section {
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    position: relative;
    overflow: hidden;
  }

  .why-choose-us-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  /* Decorative Stars - Top Right */
  .floating-star-small {
    position: absolute;
    top: 117px;
    right: 76px;
    width: 45px;
    height: 45px;
    object-fit: contain;
    z-index: 1;
    transform: rotate(-17deg) scaleY(-1);
  }

  .floating-star-large {
    position: absolute;
    top: 157px;
    right: 144px;
    width: 72px;
    height: 72px;
    object-fit: contain;
    z-index: 1;
    transform: rotate(17deg) scaleY(-1);
  }

  /* Decorative Rainbow - Top Left */
  .floating-rainbow {
    position: absolute;
    top: 90px;
    left: -85px;
    width: 255px;
    height: 183px;
    object-fit: contain;
    z-index: 1;
    transform: rotate(7.73deg);
  }

  /* Left Side - Feature Image */
  .why-choose-us-image-area {
    position: relative;
  }

  .why-choose-us-feature-image {
    width: 100%;
    max-width: 700px;
    height: auto;
    display: block;
  }

  /* Right Side - Content */
  .why-choose-us-content-area {
    display: flex;
    flex-direction: column;
    gap: 40px;
    padding-left: 2rem;
  }

  .why-choose-us-text-wrapper {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .why-choose-us-title {
    font-family: 'Source Serif 4', Georgia, serif;
    font-size: {{ section.settings.title_size }}px;
    font-weight: 800;
    color: {{ section.settings.title_color }};
    margin: 0;
    line-height: 1.2;
  }

  .why-choose-us-description {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.text_color }};
    line-height: 1.5;
    margin: 0;
  }

  .why-choose-us-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    padding: 14px 50px;
    border-radius: 50px;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 16px;
    font-weight: bold;
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: none;
    cursor: pointer;
    width: fit-content;
  }

  .why-choose-us-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(104, 40, 9, 0.3);
  }

  /* Mobile Responsive */
  @media screen and (max-width: 768px) {
    .why-choose-us-section {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }

    .why-choose-us-container {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 0 1rem;
    }

    .why-choose-us-content-area {
      padding-left: 0;
      text-align: center;
    }

    .why-choose-us-title {
      font-size: {{ section.settings.title_size | times: 0.75 }}px;
    }

    .why-choose-us-description {
      font-size: {{ section.settings.description_size | times: 0.9 }}px;
    }

    .why-choose-us-button {
      margin: 0 auto;
    }

    /* Mobile Decorative Positions */
    .floating-rainbow {
      width: 150px;
      height: 108px;
      top: 50px;
      left: -50px;
    }

    .floating-star-small {
      width: 30px;
      height: 30px;
      top: 60px;
      right: 20px;
    }

    .floating-star-large {
      width: 48px;
      height: 48px;
      top: 90px;
      right: 60px;
    }
  }

  /* Tablet Responsive */
  @media screen and (min-width: 769px) and (max-width: 1024px) {
    .why-choose-us-container {
      gap: 3rem;
    }

    .why-choose-us-content-area {
      padding-left: 1rem;
    }
  }
</style>

<section class="why-choose-us-section">
  <!-- Decorative Rainbow (Top Left) -->
  {% if section.settings.rainbow_icon != blank %}
    <img
      src="{{ section.settings.rainbow_icon | image_url: width: 510 }}"
      alt="Rainbow decoration"
      class="floating-rainbow"
      width="255"
      height="183"
      loading="lazy"
    >
  {% endif %}

  <!-- Decorative Stars (Top Right) -->
  {% if section.settings.star_icon != blank %}
    <img
      src="{{ section.settings.star_icon | image_url: width: 144 }}"
      alt="Star decoration small"
      class="floating-star-small"
      width="45"
      height="45"
      loading="lazy"
    >
    <img
      src="{{ section.settings.star_icon | image_url: width: 144 }}"
      alt="Star decoration large"
      class="floating-star-large"
      width="72"
      height="72"
      loading="lazy"
    >
  {% endif %}

  <div class="why-choose-us-container">
    <!-- Left Side - Feature Image with Callouts -->
    <div class="why-choose-us-image-area">
      {% if section.settings.feature_image != blank %}
        <img
          src="{{ section.settings.feature_image | image_url: width: 1400 }}"
          alt="{{ section.settings.feature_image.alt | default: 'Why choose us - Product features' }}"
          class="why-choose-us-feature-image"
          loading="lazy"
          width="700"
          height="700"
        >
      {% else %}
        <div
          class="why-choose-us-feature-image"
          style="background-color: #f5f5f5; height: 500px; display: flex; align-items: center; justify-content: center; color: #999;"
        >
          Upload Feature Image
        </div>
      {% endif %}
    </div>

    <!-- Right Side - Content -->
    <div class="why-choose-us-content-area">
      <div class="why-choose-us-text-wrapper">
        {% if section.settings.title != blank %}
          <h2 class="why-choose-us-title">{{ section.settings.title | escape }}</h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <div class="why-choose-us-description">{{ section.settings.description }}</div>
        {% endif %}
      </div>

      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="why-choose-us-button">
          {{ section.settings.button_text | escape }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

