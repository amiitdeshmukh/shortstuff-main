<style>
.gift-card-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 60px 20px;
  min-height: 60vh;
}

/* Coming Soon Styles */
.coming-soon-wrapper {
  text-align: center;
  padding: 80px 20px;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 20px;
  box-shadow: 0 10px 40px rgba(0,0,0,0.1);
}

.coming-soon-icon {
  font-size: 80px;
  margin-bottom: 20px;
}

.coming-soon-title {
  font-family: 'Source Serif 4', serif;
  font-size: 48px;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 16px;
}

.coming-soon-subtitle {
  font-family: 'Nunito', sans-serif;
  font-size: 24px;
  color: #7f8c8d;
  margin-bottom: 30px;
}

.coming-soon-description {
  font-family: 'Nunito', sans-serif;
  font-size: 16px;
  color: #95a5a6;
  max-width: 600px;
  margin: 0 auto 40px;
  line-height: 1.6;
}

.notify-me-button {
  font-family: 'Nunito', sans-serif;
  font-size: 16px;
  font-weight: 600;
  color: #ffffff;
  background-color: #3498db;
  border: none;
  border-radius: 30px;
  padding: 14px 40px;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
}

.notify-me-button:hover {
  background-color: #2980b9;
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(52, 152, 219, 0.4);
}

.back-to-home-link {
  display: inline-block;
  margin-top: 30px;
  font-family: 'Nunito', sans-serif;
  font-size: 14px;
  color: #7f8c8d;
  text-decoration: none;
  transition: color 0.2s ease;
}

.back-to-home-link:hover {
  color: #2c3e50;
  text-decoration: underline;
}

@media (max-width: 768px) {
  .coming-soon-wrapper {
    padding: 60px 20px;
  }
  
  .coming-soon-icon {
    font-size: 60px;
  }
  
  .coming-soon-title {
    font-size: 36px;
  }
  
  .coming-soon-subtitle {
    font-size: 20px;
  }
  
  .coming-soon-description {
    font-size: 14px;
  }
}
</style>

<div class="gift-card-container">
  <div id="giftCardContent">
    <!-- Content will be loaded here based on location -->
    <div style="text-align: center; padding: 100px 20px;">
      <div style="font-size: 40px; margin-bottom: 20px;">‚è≥</div>
      <p style="font-size: 18px; color: #666;">Loading...</p>
    </div>
  </div>
</div>

<script>
(function() {
  const GIFT_CARD_PRODUCT_HANDLE = '{{ product.handle }}';
  const GIFT_CARD_AVAILABLE_IN_INDIA = {{ section.settings.available_in_india | default: false }};
  const COMING_SOON_TITLE = {{ section.settings.coming_soon_title | default: "Coming Soon to India!" | json }};
  const COMING_SOON_DESCRIPTION = {{ section.settings.coming_soon_description | default: "We're excited to announce that our gift cards will be available in India very soon!" | json }};
  
  function isIndianUser() {
    // Method 1: Check Shopify currency (most reliable for Shopify stores)
    const shopifyCurrency = window.Shopify?.currency?.active || '{{ cart.currency.iso_code }}';
    if (shopifyCurrency === 'INR') {
      return true;
    }
    
    // Method 2: Check browser timezone as backup
    const timezone = Intl.DateTimeFormat().resolvedOptions().timeZone;
    if (timezone && timezone.includes('Asia/Kolkata')) {
      return true;
    }
    
    // Method 3: Check if product is unavailable (404 scenario)
    const productData = {{ product | json }};
    if (!productData || !productData.id) {
      return true; // Assume India if product doesn't exist
    }
    
    return false;
  }
  
  function showComingSoon() {
    const container = document.getElementById('giftCardContent');
    if (!container) return;
    
    container.innerHTML = `
      <div class="coming-soon-wrapper">
        <div class="coming-soon-icon">üéÅ</div>
        <h1 class="coming-soon-title">${COMING_SOON_TITLE}</h1>
        <p class="coming-soon-subtitle">Short Stuff Gift Cards</p>
        <p class="coming-soon-description">
          ${COMING_SOON_DESCRIPTION}
        </p>
        <button class="notify-me-button" onclick="notifyMe()">
          Notify Me When Available
        </button>
        <a href="/" class="back-to-home-link">‚Üê Back to Home</a>
      </div>
    `;
  }
  
  function showGiftCardProduct() {
    const container = document.getElementById('giftCardContent');
    if (!container) return;
    
    // Load the actual product section
    fetch(window.location.pathname + '?section_id=main-product')
      .then(response => response.text())
      .then(html => {
        container.innerHTML = html;
        
        // Re-initialize any scripts if needed
        if (typeof initializeProductPage === 'function') {
          initializeProductPage();
        }
      })
      .catch(error => {
        console.error('Error loading product:', error);
        container.innerHTML = `
          <div style="text-align: center; padding: 60px 20px;">
            <h2>Gift Card</h2>
            <p>Please refresh the page to view the gift card.</p>
          </div>
        `;
      });
  }
  
  function init() {
    // Check if user is from India and gift card not available there yet
    if (isIndianUser() && !GIFT_CARD_AVAILABLE_IN_INDIA) {
      showComingSoon();
    } else {
      showGiftCardProduct();
    }
  }
  
  // Notify me function
  window.notifyMe = function() {
    const email = prompt('Enter your email address to get notified:');
    if (email && email.includes('@')) {
      // You can integrate with your email marketing service here
      alert('Thank you! We\'ll notify you when gift cards are available in India.');
      
      // Optional: Send to a backend endpoint
      // fetch('/apps/notify-me', {
      //   method: 'POST',
      //   headers: { 'Content-Type': 'application/json' },
      //   body: JSON.stringify({ email, product: 'gift-card' })
      // });
    }
  };
  
  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>

