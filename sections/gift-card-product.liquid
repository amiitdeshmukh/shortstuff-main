<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Source+Serif+4:wght@400;700&display=swap" rel="stylesheet">

<style>
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

.gift-card-container {
  width: 100%;
  min-height: 100vh;
  background-color: #FFFCF6;
  position: relative;
  overflow: hidden;
}

/* Coming Soon Styles - Exact Figma Design */
.coming-soon-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 60px 20px;
  position: relative;
}

.coming-soon-title {
  font-family: 'Source Serif 4', serif;
  font-size: 180px;
  font-weight: 400;
  color: #682809;
  text-align: center;
  line-height: 1;
  margin-bottom: 141px;
  letter-spacing: -0.02em;
}

.coming-soon-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40px;
  max-width: 432px;
  width: 100%;
}

.coming-soon-text-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
  text-align: center;
}

.coming-soon-subtitle {
  font-family: 'Source Serif 4', serif;
  font-size: 30px;
  font-weight: 700;
  color: #1A1A1A;
  line-height: 1.2;
  margin: 0;
}

.coming-soon-description {
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 16px;
  font-weight: 400;
  color: #1A1A1A;
  line-height: 1.4;
  margin: 0;
}

.back-to-home-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background-color: #682809;
  color: #FFFFFF;
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 16px;
  font-weight: 700;
  padding: 14px 50px;
  border-radius: 50px;
  border: none;
  cursor: pointer;
  text-decoration: none;
  transition: all 0.3s ease;
}

.back-to-home-button:hover {
  background-color: #4a1c06;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(104, 40, 9, 0.3);
}

.giraffe-icon {
  position: absolute;
  top: 176px;
  right: calc(8.33% + 27px);
  width: 208px;
  height: 243px;
}

.giraffe-icon img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* Responsive Design */
@media (max-width: 1200px) {
  .coming-soon-title {
    font-size: 140px;
    margin-bottom: 100px;
  }
  
  .giraffe-icon {
    width: 180px;
    height: 210px;
    right: 5%;
  }
}

@media (max-width: 990px) {
  .coming-soon-title {
    font-size: 100px;
    margin-bottom: 80px;
  }
  
  .giraffe-icon {
    width: 150px;
    height: 175px;
    top: 120px;
    right: 3%;
  }
}

@media (max-width: 768px) {
  .coming-soon-wrapper {
    padding: 40px 20px;
  }
  
  .coming-soon-title {
    font-size: 72px;
    margin-bottom: 60px;
  }
  
  .coming-soon-content {
    max-width: 100%;
    gap: 30px;
  }
  
  .coming-soon-subtitle {
    font-size: 24px;
  }
  
  .coming-soon-description {
    font-size: 14px;
  }
  
  .back-to-home-button {
    padding: 12px 40px;
    font-size: 15px;
  }
  
  .giraffe-icon {
    width: 100px;
    height: 115px;
    top: 80px;
    right: 2%;
  }
}

@media (max-width: 480px) {
  .coming-soon-title {
    font-size: 48px;
    margin-bottom: 40px;
  }
  
  .coming-soon-content {
    gap: 24px;
  }
  
  .coming-soon-text-group {
    gap: 16px;
  }
  
  .coming-soon-subtitle {
    font-size: 20px;
  }
  
  .coming-soon-description {
    font-size: 13px;
  }
  
  .back-to-home-button {
    padding: 10px 30px;
    font-size: 14px;
  }
  
  .giraffe-icon {
    width: 70px;
    height: 82px;
    top: 60px;
    right: 5px;
  }
}
</style>

<div class="gift-card-container">
  <div id="giftCardContent">
    <!-- Content will be loaded here based on location -->
    <div style="text-align: center; padding: 100px 20px;">
      <div style="font-size: 40px; margin-bottom: 20px;">‚è≥</div>
      <p style="font-size: 18px; color: #666;">Loading...</p>
    </div>
  </div>
</div>

<script>
(function() {
  const GIFT_CARD_PRODUCT_HANDLE = '{{ product.handle }}';
  const GIFT_CARD_AVAILABLE_IN_INDIA = {{ section.settings.available_in_india | default: false }};
  const COMING_SOON_TITLE = {{ section.settings.coming_soon_title | default: "Coming Soon to India!" | json }};
  const COMING_SOON_DESCRIPTION = {{ section.settings.coming_soon_description | default: "We're excited to announce that our gift cards will be available in India very soon!" | json }};
  
  function isIndianUser() {
    // Method 1: Check Shopify currency (most reliable for Shopify stores)
    const shopifyCurrency = window.Shopify?.currency?.active || '{{ cart.currency.iso_code }}';
    if (shopifyCurrency === 'INR') {
      return true;
    }
    
    // Method 2: Check browser timezone as backup
    const timezone = Intl.DateTimeFormat().resolvedOptions().timeZone;
    if (timezone && timezone.includes('Asia/Kolkata')) {
      return true;
    }
    
    // Method 3: Check if product is unavailable (404 scenario)
    const productData = {{ product | json }};
    if (!productData || !productData.id) {
      return true; // Assume India if product doesn't exist
    }
    
    return false;
  }
  
  function showComingSoon() {
    const container = document.getElementById('giftCardContent');
    if (!container) return;
    
    const giraffeImage = '{{ section.settings.giraffe_icon | image_url: width: 416 }}';
    const hasGiraffe = '{{ section.settings.giraffe_icon }}' !== '';
    
    container.innerHTML = `
      <div class="coming-soon-wrapper">
        <h1 class="coming-soon-title">Coming Soon</h1>
        <div class="coming-soon-content">
          <div class="coming-soon-text-group">
            <h2 class="coming-soon-subtitle">Gift cards are launching soon.</h2>
            <p class="coming-soon-description">Easy to give. Lovely to receive.</p>
          </div>
          <a href="/" class="back-to-home-button">Back to Homepage</a>
        </div>
        ${hasGiraffe ? `
        <div class="giraffe-icon">
          <img src="${giraffeImage}" alt="Giraffe Icon">
        </div>
        ` : ''}
      </div>
    `;
  }
  
  function showGiftCardProduct() {
    const container = document.getElementById('giftCardContent');
    if (!container) return;
    
    // Load the actual product section
    fetch(window.location.pathname + '?section_id=main-product')
      .then(response => response.text())
      .then(html => {
        container.innerHTML = html;
        
        // Re-initialize any scripts if needed
        if (typeof initializeProductPage === 'function') {
          initializeProductPage();
        }
      })
      .catch(error => {
        console.error('Error loading product:', error);
        container.innerHTML = `
          <div style="text-align: center; padding: 60px 20px;">
            <h2>Gift Card</h2>
            <p>Please refresh the page to view the gift card.</p>
          </div>
        `;
      });
  }
  
  function init() {
    // Check if user is from India and gift card not available there yet
    if (isIndianUser() && !GIFT_CARD_AVAILABLE_IN_INDIA) {
      showComingSoon();
    } else {
      showGiftCardProduct();
    }
  }
  
  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>

