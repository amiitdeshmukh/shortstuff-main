<style>
  .hero-creativity {
    background-color: {{ section.settings.background_color }};
    position: relative;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: 2rem;
    padding-right: 2rem;
    overflow: hidden;
    min-height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-creativity__container {
    max-width: 1200px;
    width: 100%;
    text-align: center;
    position: relative;
    z-index: 2;
  }

  .hero-creativity__subtitle {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border: 1px solid {{ section.settings.button_border_color }};
    padding: 0.5rem 1.5rem;
    border-radius: 25px;
    font-size: {{ section.settings.subtitle_size }}px;
    font-weight: 500;
    display: inline-block;
    margin-bottom: 1rem;
  }

  .hero-creativity__title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: bold;
    color: {{ section.settings.title_color }};
    margin-bottom: 0.5rem;
    line-height: 1.2;
    position: relative;
    display: inline-block;
    width: 100%;
  }

  /* Curvy line decoration under heading */
  .hero-creativity__title::after {
    content: '';
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: -{{ section.settings.line_icon_overlap }}px;
    width: {{ section.settings.line_icon_width }}px;
    height: {{ section.settings.line_icon_height }}px;
    background-image: url("{{ section.settings.line_icon | image_url }}");
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
    z-index: 1;
  }

  .hero-creativity__title-wrapper {
    margin-bottom: {{ section.settings.line_icon_spacing }}px;
  }

  .hero-creativity__description {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.text_color }};
    line-height: 1.6;
    max-width: 800px;
    margin: 0 auto;
  }

  /* Static Decorative Elements - Fixed Proportional Scaling */
  .hero-creativity__floating-icon {
    position: absolute;
    z-index: 1;
    /* Fixed: Now properly scales both width and height proportionally */
    object-fit: contain;
    max-width: none;
    max-height: none;
  }

  .hero-creativity__floating-icon--1 {
    top: {{ section.settings.icon1_top_desktop }}%;
    left: {{ section.settings.icon1_left_desktop }}%;
    width: {{ section.settings.icon1_size }}px;
    height: auto;
  }

  .hero-creativity__floating-icon--2 {
    top: {{ section.settings.icon2_top_desktop }}%;
    left: {{ section.settings.icon2_left_desktop }}%;
    width: {{ section.settings.icon2_size }}px;
    height: auto;
  }

  .hero-creativity__floating-icon--3 {
    top: {{ section.settings.icon3_top_desktop }}%;
    right: {{ section.settings.icon3_right_desktop }}%;
    width: {{ section.settings.icon3_size }}px;
    height: auto;
  }

  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .hero-creativity {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      padding-left: 1rem;
      padding-right: 1rem;
      min-height: 150px;
    }

    .hero-creativity__title {
      font-size: {{ section.settings.title_size | times: 0.7 }}px;
    }

    .hero-creativity__description {
      font-size: {{ section.settings.description_size | times: 0.9 }}px;
    }

    .hero-creativity__subtitle {
      font-size: {{ section.settings.subtitle_size | times: 0.9 }}px;
    }

    /* Mobile positioning for icons - Fixed proportional scaling */
    .hero-creativity__floating-icon--1 {
      top: {{ section.settings.icon1_top_mobile }}%;
      left: {{ section.settings.icon1_left_mobile }}%;
      width: {{ section.settings.icon1_size | times: 0.7 }}px;
      height: auto;
    }

    .hero-creativity__floating-icon--2 {
      top: {{ section.settings.icon2_top_mobile }}%;
      left: {{ section.settings.icon2_left_mobile }}%;
      width: {{ section.settings.icon2_size | times: 0.7 }}px;
      height: auto;
    }

    .hero-creativity__floating-icon--3 {
      top: {{ section.settings.icon3_top_mobile }}%;
      right: {{ section.settings.icon3_right_mobile }}%;
      width: {{ section.settings.icon3_size | times: 0.7 }}px;
      height: auto;
    }

    /* Responsive curvy line on mobile */
    .hero-creativity__title::after {
      width: {{ section.settings.line_icon_width | times: 0.8 }}px;
      height: {{ section.settings.line_icon_height | times: 0.8 }}px;
      bottom: -{{ section.settings.line_icon_overlap | times: 0.8 }}px;
    }

    .hero-creativity__title-wrapper {
      margin-bottom: {{ section.settings.line_icon_spacing | times: 0.7 }}px;
    }
  }
</style>

<section class="hero-creativity">
  <!-- Static Icons -->
  {%- if section.settings.icon1_image != blank -%}
    <img
      src="{{ section.settings.icon1_image | image_url: width: 200 }}"
      alt="Decoration 1"
      class="hero-creativity__floating-icon hero-creativity__floating-icon--1"
      loading="lazy"
    >
  {%- endif -%}

  {%- if section.settings.icon2_image != blank -%}
    <img
      src="{{ section.settings.icon2_image | image_url: width: 200 }}"
      alt="Decoration 2"
      class="hero-creativity__floating-icon hero-creativity__floating-icon--2"
      loading="lazy"
    >
  {%- endif -%}

  {%- if section.settings.icon3_image != blank -%}
    <img
      src="{{ section.settings.icon3_image | image_url: width: 200 }}"
      alt="Decoration 3"
      class="hero-creativity__floating-icon hero-creativity__floating-icon--3"
      loading="lazy"
    >
  {%- endif -%}

  <!-- Main Content -->
  <div class="hero-creativity__container">
    {%- if section.settings.subtitle_text != blank -%}
      <div class="hero-creativity__subtitle">
        {{ section.settings.subtitle_text | escape }}
      </div>
    {%- endif -%}

    {%- if section.settings.title != blank -%}
      <div class="hero-creativity__title-wrapper">
        <h2 class="hero-creativity__title">{{ section.settings.title | escape }}</h2>
      </div>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <div class="hero-creativity__description">{{ section.settings.description }}</div>
    {%- endif -%}
  </div>
</section>

