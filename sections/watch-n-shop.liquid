<style>
  .watch-shop-section {
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    position: relative;
  }

  .watch-shop-container {
    max-width: 1438px;
    margin: 0 auto;
    padding: 0 57px;
  }

  .watch-shop-title {
    font-family: 'Nunito', sans-serif;
    font-size: {{ section.settings.title_size }}px;
    font-weight: 800;
    color: {{ section.settings.title_color }};
    text-align: center;
    margin: 0 0 {{ section.settings.title_margin_bottom }}px 0;
    line-height: 1.2;
  }

  /* Desktop Grid - 4 Columns */
  .watch-shop-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ section.settings.card_gap }}px;
  }

  .watch-shop-card {
    background: white;
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .watch-shop-media {
    width: 100%;
    height: {{ section.settings.media_height }}px;
    background: #f5f5f5;
    flex-shrink: 0;
    overflow: hidden;
  }

  .watch-shop-media img,
  .watch-shop-media video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .watch-shop-content {
    padding: 24px;
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 12px;
    flex: 1;
    justify-content: center;
  }

  .watch-shop-link {
    font-family: 'Helvetica Neue', sans-serif;
    font-size: {{ section.settings.link_size }}px;
    font-weight: bold;
    color: {{ section.settings.text_color }};
    text-decoration: underline;
    margin: 0;
    transition: color 0.3s ease;
  }

  .watch-shop-link:hover {
    color: {{ section.settings.title_color }};
  }

  .watch-shop-description {
    font-family: 'Source Serif 4', serif;
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.text_color }};
    margin: 0;
    line-height: 1.4;
  }

  /* Mobile - Horizontal Scroll */
  @media screen and (max-width: 768px) {
    .watch-shop-container {
      padding: 0 20px;
    }

    .watch-shop-title {
      font-size: {{ section.settings.title_size | times: 0.7 }}px;
      margin-bottom: {{ section.settings.title_margin_bottom_mobile }}px;
    }

    .watch-shop-grid {
      display: flex;
      grid-template-columns: none;
      gap: 15px;
      overflow-x: auto;
      overflow-y: visible;
      flex-wrap: nowrap;
      scroll-behavior: smooth;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      padding: 0 20px 20px 20px;
      scroll-snap-type: x mandatory;
    }

    .watch-shop-grid::-webkit-scrollbar {
      display: none;
    }

    .watch-shop-card {
      flex: 0 0 {{ section.settings.card_width_mobile }}px;
      width: {{ section.settings.card_width_mobile }}px;
      scroll-snap-align: start;
    }

    .watch-shop-media {
      height: {{ section.settings.media_height_mobile }}px;
    }

    .watch-shop-content {
      padding: 16px;
      gap: 8px;
    }

    .watch-shop-link {
      font-size: {{ section.settings.link_size | times: 0.9 }}px;
    }

    .watch-shop-description {
      font-size: {{ section.settings.description_size | times: 0.9 }}px;
    }
  }

  /* Tablet */
  @media screen and (min-width: 769px) and (max-width: 1024px) {
    .watch-shop-container {
      padding: 0 30px;
    }

    .watch-shop-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 15px;
    }
  }
</style>

<section class="watch-shop-section">
  <div class="watch-shop-container">
    {% if section.settings.title != blank %}
      <h2 class="watch-shop-title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="watch-shop-grid">
      {% for block in section.blocks %}
        <div class="watch-shop-card" {{ block.shopify_attributes }}>
          <div class="watch-shop-media">
            {% if block.settings.video != blank %}
              {{ block.settings.video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true }}
            {% elsif block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url: width: 700 }}"
                alt="{{ block.settings.image.alt | default: 'Product video' }}"
                loading="lazy"
              >
            {% else %}
              <div style="display: flex; align-items: center; justify-content: center; height: 100%; color: #999; font-size: 14px;">
                Add Video or Image
              </div>
            {% endif %}
          </div>

          <div class="watch-shop-content">
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="watch-shop-link">
                {{ block.settings.link_text | default: "Shop Now" }}
              </a>
            {% else %}
              <p class="watch-shop-link">{{ block.settings.link_text | default: "Shop Now" }}</p>
            {% endif %}

            {% if block.settings.description != blank %}
              <p class="watch-shop-description">{{ block.settings.description }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

