<style>
  .three-column-section {
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: 2rem;
    padding-right: 2rem;
    position: relative;
    overflow: hidden;
  }

  .three-column-container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  /* Section Title */
  .section-title {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title__heading {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: bold;
    color: {{ section.settings.heading_color }};
    margin: 0;
    position: relative;
    display: inline-block;
    width: 100%;
  }

  /* Curvy line decoration under heading */
  .section-title__heading::after {
    content: '';
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: -{{ section.settings.line_icon_overlap }}px;
    width: {{ section.settings.line_icon_width }}px;
    height: {{ section.settings.line_icon_height }}px;
    background-image: url("{{ section.settings.line_icon | image_url }}");
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
    z-index: 1;
  }

  .section-title-wrapper {
    margin-bottom: {{ section.settings.line_icon_spacing }}px;
  }

  /* Static Decorative Icons - Fixed Proportional Scaling */
  .floating-icon {
    position: absolute;
    z-index: 1;
    object-fit: contain;
    /* Removed animations - now static */
  }

  .floating-icon--1 {
    top: {{ section.settings.icon1_top_desktop }}%;
    left: {{ section.settings.icon1_left_desktop }}%;
    width: {{ section.settings.icon1_size_desktop }}px;
    height: {{ section.settings.icon1_size_desktop }}px;
  }

  .floating-icon--2 {
    top: {{ section.settings.icon2_top_desktop }}%;
    right: {{ section.settings.icon2_right_desktop }}%;
    width: {{ section.settings.icon2_size_desktop }}px;
    height: {{ section.settings.icon2_size_desktop }}px;
  }

  .floating-icon--3 {
    bottom: {{ section.settings.icon3_bottom_desktop }}%;
    left: {{ section.settings.icon3_left_desktop }}%;
    width: {{ section.settings.icon3_size_desktop }}px;
    height: {{ section.settings.icon3_size_desktop }}px;
  }

  /* Desktop Layout */
  .three-column-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    align-items: start;
  }

  .column-item {
    text-align: center;
    position: relative;
  }

  .column-item__image-wrapper {
    position: relative;
    margin-bottom: 1rem;
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .column-item__image {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .column-item__image:hover {
    transform: scale(1.05);
  }

  .column-item__title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: 600;
    color: {{ section.settings.title_color }};
    margin: 0;
    line-height: 1.3;
  }

  /* Mobile Layout */
  @media screen and (max-width: 768px) {
    .three-column-section {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      padding-left: 1rem;
      padding-right: 1rem;
    }

    .section-title {
      margin-bottom: 2rem;
    }

    .section-title__heading {
      font-size: {{ section.settings.heading_size | times: 0.8 }}px;
    }

    /* Responsive curvy line on mobile */
    .section-title__heading::after {
      width: {{ section.settings.line_icon_width | times: 0.8 }}px;
      height: {{ section.settings.line_icon_height | times: 0.8 }}px;
      bottom: -{{ section.settings.line_icon_overlap | times: 0.8 }}px;
    }

    .section-title-wrapper {
      margin-bottom: {{ section.settings.line_icon_spacing | times: 0.7 }}px;
    }

    .three-column-grid {
      display: block;
      position: relative;
      overflow: hidden;
    }

    .carousel-wrapper {
      display: flex;
      transition: transform 0.5s ease;
    }

    .column-item {
      flex-shrink: 0;
      padding: 0 1rem;
    }

    .carousel-dots {
      display: flex;
      justify-content: center;
      margin-top: 1.5rem;
      gap: 0.5rem;
    }

    .carousel-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background-color: #ddd;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .carousel-dot.active {
      background-color: {{ section.settings.title_color }};
    }

    .column-item__title {
      font-size: {{ section.settings.title_size | times: 0.9 }}px;
    }

    /* Mobile Icon Positions - Fixed Proportional Scaling */
    .floating-icon--1 {
      top: {{ section.settings.icon1_top_mobile }}% !important;
      left: {{ section.settings.icon1_left_mobile }}% !important;
      width: {{ section.settings.icon1_size_mobile }}px !important;
      height: {{ section.settings.icon1_size_mobile }}px !important;
    }

    .floating-icon--2 {
      top: {{ section.settings.icon2_top_mobile }}% !important;
      right: {{ section.settings.icon2_right_mobile }}% !important;
      width: {{ section.settings.icon2_size_mobile }}px !important;
      height: {{ section.settings.icon2_size_mobile }}px !important;
    }

    .floating-icon--3 {
      bottom: {{ section.settings.icon3_bottom_mobile }}% !important;
      left: {{ section.settings.icon3_left_mobile }}% !important;
      width: {{ section.settings.icon3_size_mobile }}px !important;
      height: {{ section.settings.icon3_size_mobile }}px !important;
    }
  }

  /* Desktop - Hide carousel dots */
  @media screen and (min-width: 769px) {
    .carousel-dots {
      display: none;
    }

    .carousel-wrapper {
      display: contents;
    }
  }
