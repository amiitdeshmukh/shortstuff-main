<section class="three-column-section">
  <!-- Static Icons -->
  {%- if section.settings.icon1_image != blank -%}
    <img
      src="{{ section.settings.icon1_image | image_url: width: 300 }}"
      alt="Decoration 1"
      class="floating-icon floating-icon--1"
      loading="lazy"
    >
  {%- endif -%}

  {%- if section.settings.icon2_image != blank -%}
    <img
      src="{{ section.settings.icon2_image | image_url: width: 300 }}"
      alt="Decoration 2"
      class="floating-icon floating-icon--2"
      loading="lazy"
    >
  {%- endif -%}

  {%- if section.settings.icon3_image != blank -%}
    <img
      src="{{ section.settings.icon3_image | image_url: width: 300 }}"
      alt="Decoration 3"
      class="floating-icon floating-icon--3"
      loading="lazy"
    >
  {%- endif -%}

  <div class="three-column-container">
    <!-- Section Title with Curvy Line -->
    {%- if section.settings.section_heading != blank -%}
      <div class="section-title">
        <div class="section-title-wrapper">
          <h2 class="section-title__heading">{{ section.settings.section_heading | escape }}</h2>
        </div>
      </div>
    {%- endif -%}

    <div class="three-column-grid">
      <div class="carousel-wrapper">
        {%- for block in section.blocks -%}
          {%- assign show_block = false -%}
          {%- assign current_country = localization.country.iso_code -%}
          
          {%- comment -%} Check if block should be shown based on region settings {%- endcomment -%}
          {%- if block.settings.target_region == 'all' -%}
            {%- assign show_block = true -%}
          {%- elsif block.settings.target_region == 'india' and current_country == 'IN' -%}
            {%- assign show_block = true -%}
          {%- elsif block.settings.target_region == 'usa' and current_country == 'US' -%}
            {%- assign show_block = true -%}
          {%- endif -%}

          {%- if show_block -%}
            <div class="column-item" {{ block.shopify_attributes }}>
              {%- if block.settings.image != blank -%}
                <div class="column-item__image-wrapper">
                  {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}">
                  {%- endif -%}
                  <img
                    src="{{ block.settings.image | image_url: width: 600 }}"
                    alt="{{ block.settings.image.alt | default: block.settings.title }}"
                    class="column-item__image"
                    loading="lazy"
                    width="600"
                    height="auto"
                  >
                  {%- if block.settings.link != blank -%}
                    </a>
                  {%- endif -%}
                </div>
              {%- endif -%}

              {%- if block.settings.title != blank -%}
                <h3 class="column-item__title">{{ block.settings.title | escape }}</h3>
              {%- endif -%}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

    <!-- Mobile Carousel Dots -->
    <div class="carousel-dots">
      {%- for block in section.blocks -%}
        {%- assign show_dot = false -%}
        {%- assign current_country = localization.country.iso_code -%}
        
        {%- if block.settings.target_region == 'all' -%}
          {%- assign show_dot = true -%}
        {%- elsif block.settings.target_region == 'india' and current_country == 'IN' -%}
          {%- assign show_dot = true -%}
        {%- elsif block.settings.target_region == 'usa' and current_country == 'US' -%}
          {%- assign show_dot = true -%}
        {%- endif -%}

        {%- if show_dot -%}
          <span class="carousel-dot{% if forloop.first %} active{% endif %}" data-slide="{{ forloop.index0 }}"></span>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Only run carousel on mobile
  function initCarousel() {
    if (window.innerWidth <= 768) {
      const wrapper = document.querySelector('.carousel-wrapper');
      const dots = document.querySelectorAll('.carousel-dot');
      const visibleItems = document.querySelectorAll('.column-item');
      const totalSlides = visibleItems.length;
      
      // Don't initialize carousel if there are no visible items
      if (totalSlides === 0) return;
      
      let currentSlide = 0;
      let autoSlideInterval;
      let touchStartX = 0;
      let touchEndX = 0;

      // Calculate percentage based on actual visible items
      const slidePercentage = 100 / totalSlides;

      function goToSlide(slideIndex) {
        const translateX = -(slideIndex * slidePercentage);
        wrapper.style.transform = `translateX(${translateX}%)`;
        
        // Update active dot
        dots.forEach(dot => dot.classList.remove('active'));
        if (dots[slideIndex]) {
          dots[slideIndex].classList.add('active');
        }
        
        currentSlide = slideIndex;
      }

      function nextSlide() {
        currentSlide = (currentSlide + 1) % totalSlides;
        goToSlide(currentSlide);
      }

      function prevSlide() {
        currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
        goToSlide(currentSlide);
      }

      function startAutoSlide() {
        autoSlideInterval = setInterval(nextSlide, {{ section.settings.autoplay_delay | times: 1000 }});
      }

      function stopAutoSlide() {
        clearInterval(autoSlideInterval);
      }

      // Touch event handlers
      function handleTouchStart(e) {
        touchStartX = e.changedTouches[0].screenX;
        stopAutoSlide();
      }

      function handleTouchEnd(e) {
        touchEndX = e.changedTouches[0].screenX;
        handleSwipe();
        
        // Restart auto-slide after swipe
        if ({{ section.settings.enable_autoplay | json }}) {
          startAutoSlide();
        }
      }

      function handleSwipe() {
        const swipeThreshold = 50; // Minimum distance for a swipe
        const swipeDistance = touchEndX - touchStartX;
        
        if (Math.abs(swipeDistance) > swipeThreshold) {
          if (swipeDistance > 0) {
            // Swiped right - go to previous slide
            prevSlide();
          } else {
            // Swiped left - go to next slide
            nextSlide();
          }
        }
      }

      // Add touch event listeners to wrapper
      wrapper.addEventListener('touchstart', handleTouchStart, { passive: true });
      wrapper.addEventListener('touchend', handleTouchEnd, { passive: true });

      // Dot click handlers
      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          stopAutoSlide();
          goToSlide(index);
          startAutoSlide(); // Restart auto-slide after manual interaction
        });
      });

      // Start auto-slide
      if ({{ section.settings.enable_autoplay | json }}) {
        startAutoSlide();
      }

      // Pause on hover
      const section = document.querySelector('.three-column-section');
      section.addEventListener('mouseenter', stopAutoSlide);
      section.addEventListener('mouseleave', () => {
        if ({{ section.settings.enable_autoplay | json }}) {
          startAutoSlide();
        }
      });

      // Update wrapper width based on visible items
      wrapper.style.width = `${totalSlides * 100}%`;
      
      // Update each item width
      visibleItems.forEach(item => {
        item.style.width = `${slidePercentage}%`;
      });
    }
  }

  // Initialize
  initCarousel();
  
  // Re-initialize on window resize
  window.addEventListener('resize', function() {
    setTimeout(initCarousel, 100);
  });
});
</script>

