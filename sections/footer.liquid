{% comment %}theme-check-disable UndefinedObject{% endcomment %}

{%- style -%}
  .footer-independent {
    background-color: {{ section.settings.footer_bg_color }};
    color: {{ section.settings.footer_text_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    margin-top: {{ section.settings.margin_top }}px;
  }

  .footer-independent .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Main Footer Content */
  .footer-independent .footer-main {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
    align-items: start;
  }

  /* Brand Section */
  .footer-independent .footer-brand {
    grid-column: 1;
    max-width: 350px;
  }

  .footer-independent .footer-logo {
    margin-bottom: 1.5rem;
  }

  .footer-independent .footer-logo img {
    max-width: {{ section.settings.logo_width }}px;
    height: auto;
  }

  .footer-independent .footer-brand-info {
    margin-bottom: 1.5rem;
  }

  .footer-independent .footer-brand-info p {
    font-size: {{ section.settings.brand_text_size }}px;
    line-height: 1.5;
    margin-bottom: 0.5rem;
    color: {{ section.settings.footer_text_color }};
  }

  .footer-independent .footer-social-icons {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .footer-independent .footer-social-icon {
    width: 40px;
    height: 40px;
    border: 2px solid {{ section.settings.social_border_color }};
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: {{ section.settings.footer_text_color }};
    transition: all 0.3s ease;
  }

  .footer-independent .footer-social-icon:hover {
    background-color: {{ section.settings.footer_text_color }};
    color: {{ section.settings.footer_bg_color }};
    border-color: {{ section.settings.footer_text_color }};
  }

  /* Menu Columns */
  .footer-independent .footer-menu-column {
    display: flex;
    flex-direction: column;
    min-width: 180px;
  }

  .footer-independent .footer-menu-title {
    font-size: {{ section.settings.menu_title_size }}px;
    font-weight: 600;
    color: {{ section.settings.menu_title_color }};
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .footer-independent .footer-menu-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-independent .footer-menu-item {
    margin-bottom: 0.75rem;
  }

  .footer-independent .footer-menu-link {
    font-size: {{ section.settings.menu_link_size }}px;
    color: {{ section.settings.menu_link_color }};
    text-decoration: none;
    transition: color 0.3s ease;
    line-height: 1.4;
  }

  .footer-independent .footer-menu-link:hover {
    color: {{ section.settings.menu_link_hover_color }};
  }

  /* Bottom Section */
  .footer-independent .footer-bottom {
    border-top: 1px solid {{ section.settings.border_color }};
    padding-top: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-independent .footer-copyright {
    font-size: {{ section.settings.copyright_size }}px;
    color: {{ section.settings.copyright_color }};
  }

  .footer-independent .footer-payment-icons {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .footer-independent .footer-payment-icon {
    width: 40px;
    height: 24px;
    background: white;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .footer-independent .footer-payment-icon svg {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* Mobile Responsive */
  @media screen and (max-width: 768px) {
    .footer-independent {
      padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px 0;
    }

    .footer-independent .footer-container {
      padding: 0 1rem;
    }

    .footer-independent .footer-main {
      grid-template-columns: 1fr;
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .footer-independent .footer-brand {
      text-align: center;
      grid-column: 1;
    }

    .footer-independent .footer-menu-column {
      text-align: center;
    }

    .footer-independent .footer-bottom {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }

    .footer-independent .footer-social-icons {
      justify-content: center;
    }
  }

  /* Tablet */
  @media screen and (min-width: 769px) and (max-width: 1024px) {
    .footer-independent .footer-main {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }

    .footer-independent .footer-brand {
      grid-column: 1 / -1;
      text-align: center;
    }
  }
{%- endstyle -%}

<footer class="footer-independent">
  <div class="footer-container">
    <!-- Main Footer Content -->
    <div class="footer-main">
      <!-- Brand Section -->
      <div class="footer-brand">
        {% if section.settings.footer_logo != blank %}
          <div class="footer-logo">
            <img src="{{ section.settings.footer_logo | image_url: width: 300 }}" alt="{{ shop.name }}">
          </div>
        {% else %}
          <div class="footer-logo">
            <h2 style="color: {{ section.settings.footer_text_color }}; font-size: {{ section.settings.logo_text_size }}px; margin: 0;">
              {{ shop.name }}
            </h2>
          </div>
        {% endif %}

        <div class="footer-brand-info">
          {% if section.settings.footer_address != blank %}
            <p><strong>Address:</strong> {{ section.settings.footer_address }}</p>
          {% endif %}

          {% if section.settings.footer_phone != blank %}
            <p><strong>Phone Number:</strong> {{ section.settings.footer_phone }}</p>
          {% endif %}

          {% if section.settings.footer_email != blank %}
            <p>
              <strong>E-Mail Address:</strong> 
              {% if section.settings.footer_email_link != blank %}
                <a href="{{ section.settings.footer_email_link }}" style="color: {{ section.settings.footer_text_color }}; text-decoration: underline;">
                  {{ section.settings.footer_email }}
                </a>
              {% else %}
                <a href="mailto:{{ section.settings.footer_email }}" style="color: {{ section.settings.footer_text_color }}; text-decoration: underline;">
                  {{ section.settings.footer_email }}
                </a>
              {% endif %}
            </p>
          {% endif %}
        </div>

        <!-- Social Icons -->
        {% if section.settings.show_social %}
          <div class="footer-social-icons">
            {% if settings.social_facebook_link != blank %}
              <a href="{{ settings.social_facebook_link }}" class="footer-social-icon" target="_blank">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            {% endif %}

            {% if settings.social_instagram_link != blank %}
              <a href="{{ settings.social_instagram_link }}" class="footer-social-icon" target="_blank">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>

      <!-- Menu Columns -->
      {% for block in section.blocks %}
        {% if block.type == 'link_list' %}
          <div class="footer-menu-column" {{ block.shopify_attributes }}>
            {% if block.settings.heading != blank %}
              <h3 class="footer-menu-title">{{ block.settings.heading }}</h3>
            {% endif %}

            {% if block.settings.menu != blank %}
              <ul class="footer-menu-list">
                {% for link in block.settings.menu.links %}
                  <li class="footer-menu-item">
                    <a href="{{ link.url }}" class="footer-menu-link">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Bottom Section -->
    <div class="footer-bottom">
      <div class="footer-copyright">
        {{ section.settings.copyright_text | default: '© shortstuff 2025 | All Right Reserved' }}
      </div>

      {% if section.settings.show_payment_icons %}
        <div class="footer-payment-icons">
          {% assign enabled_payment_types = 'visa,master,american_express,paypal,shopify_pay,afterpay'
            | remove: ' '
            | split: ','
          %}
          {% for type in enabled_payment_types %}
            <div class="footer-payment-icon">
              {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</footer>

