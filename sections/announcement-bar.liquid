{{ 'component-slideshow.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign social_icons = true
  if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
    assign social_icons = false
  endif
  if section.settings.enable_country_selector or section.settings.enable_language_selector
    assign language_country_selector = true
  endif
  if section.blocks.size > 0
    assign announcement_bar = true
  endif
-%}

{% if social_icons %}
  {{ 'component-list-social.css' | asset_url | stylesheet_tag }}
{% endif %}

<style>
  /* Remove all container constraints */
  .announcement-bar-section .utility-bar {
    background-color: transparent !important;
    padding: 0 !important;
    margin: 0 !important;
  }

  .announcement-bar-section .utility-bar__grid {
    max-width: none !important;
    width: 100% !important;
    padding: 0 !important;
    margin: 0 !important;
  }

  /* Announcement bar - full width with background color */
  .announcement-bar-section .announcement-bar {
    width: 100% !important;
    max-width: none !important;
    background-color: {{ section.settings.default_bg_color | default: '#692909' }} !important;
    padding: 0 !important;
    margin: 0 !important;
    position: relative;
  }

  /* Slider container - full width */
  .announcement-bar-section .announcement-bar-slider {
    width: 100% !important;
    position: relative;
    padding: 0 !important;
    margin: 0 !important;
  }

  .announcement-bar-section .slider,
  .announcement-bar-section .grid {
    width: 100% !important;
    padding: 0 !important;
    margin: 0 !important;
  }

  /* Individual slides - full width with padding only on content */
  .announcement-bar-section .slideshow__slide {
    width: 100% !important;
    padding: 0 !important;
    margin: 0 !important;
    height: 40px !important;
  }

  .announcement-bar-section .announcement-bar__announcement {
    width: 100% !important;
    padding: 0 80px !important;
    margin: 0 !important;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    height: 40px !important;
  }

  /* Text styling */
  .announcement-bar-section .announcement-bar__message,
  .announcement-bar-section .announcement-bar__link,
  .announcement-bar-section p,
  .announcement-bar-section span {
    color: {{ section.settings.default_text_color | default: '#FFFFFF' }} !important;
    margin: 0;
    font-size: 16px !important;
    line-height: 40px !important;
  }

  /* Arrow buttons */
  .announcement-bar-section .slider-button {
    position: absolute !important;
    top: 50% !important;
    transform: translateY(-50%) !important;
    z-index: 10 !important;
    background: transparent !important;
    border: none !important;
    cursor: pointer !important;
    padding: 10px !important;
  }

  .announcement-bar-section .slider-button--prev {
    left: 20px !important;
  }

  .announcement-bar-section .slider-button--next {
    right: 20px !important;
  }

  .announcement-bar-section .slider-button svg {
    fill: {{ section.settings.default_text_color | default: '#FFFFFF' }} !important;
  }

  /* Individual slide colors */
  {%- for block in section.blocks -%}
    {%- assign slide_bg = block.settings.slide_bg_color | default: section.settings.default_bg_color | default: '#692909' -%}
    {%- assign slide_text = block.settings.slide_text_color | default: section.settings.default_text_color | default: '#FFFFFF' -%}
    
    .announcement-bar-section #Slide-{{ section.id }}-{{ forloop.index }} {
      background-color: {{ slide_bg }} !important;
    }
    
    .announcement-bar-section #Slide-{{ section.id }}-{{ forloop.index }} .announcement-bar__announcement,
    .announcement-bar-section #Slide-{{ section.id }}-{{ forloop.index }} .announcement-bar__message,
    .announcement-bar-section #Slide-{{ section.id }}-{{ forloop.index }} .announcement-bar__link,
    .announcement-bar-section #Slide-{{ section.id }}-{{ forloop.index }} p,
    .announcement-bar-section #Slide-{{ section.id }}-{{ forloop.index }} span {
      color: {{ slide_text }} !important;
    }
    
    .announcement-bar-section #Slide-{{ section.id }}-{{ forloop.index }} .slider-button svg {
      fill: {{ slide_text }} !important;
    }
  {%- endfor -%}

  /* Single announcement colors */
  {%- if section.blocks.first -%}
    {%- assign single_bg = section.blocks.first.settings.slide_bg_color | default: section.settings.default_bg_color | default: '#692909' -%}
    {%- assign single_text = section.blocks.first.settings.slide_text_color | default: section.settings.default_text_color | default: '#FFFFFF' -%}
    
    .announcement-bar-section .announcement-bar--one-announcement {
      background-color: {{ single_bg }} !important;
      padding: 0 80px !important;
      height: 40px !important;
      display: flex !important;
      align-items: center !important;
      justify-content: center !important;
    }

    .announcement-bar-section .announcement-bar--one-announcement .announcement-bar__message,
    .announcement-bar-section .announcement-bar--one-announcement .announcement-bar__link,
    .announcement-bar-section .announcement-bar--one-announcement p,
    .announcement-bar-section .announcement-bar--one-announcement span {
      color: {{ single_text }} !important;
      font-size: 16px !important;
      line-height: 40px !important;
    }

    .announcement-bar-section .announcement-bar--one-announcement svg {
      fill: {{ single_text }} !important;
    }
  {%- endif -%}

  /* Hide localization and social on announcement bar */
  .announcement-bar-section .localization-wrapper,
  .announcement-bar-section .social-icons {
    display: none !important;
  }

  /* Mobile Optimization */
  @media screen and (max-width: 768px) {
    /* Increase height for mobile to accommodate 2 lines */
    .announcement-bar-section .slideshow__slide {
      height: 50px !important;
      min-height: 50px !important;
    }

    .announcement-bar-section .announcement-bar__announcement {
      height: 50px !important;
      min-height: 50px !important;
      padding: 5px 50px !important;
      display: flex !important;
      align-items: center !important;
    }

    /* Smaller text for mobile with reduced line height */
    .announcement-bar-section .announcement-bar__message,
    .announcement-bar-section .announcement-bar__link,
    .announcement-bar-section p,
    .announcement-bar-section span {
      font-size: 13px !important;
      line-height: 1.3 !important;
      font-weight: 400 !important;
      white-space: normal !important;
      word-wrap: break-word !important;
    }

    /* Single announcement mobile styles */
    .announcement-bar-section .announcement-bar--one-announcement {
      height: 50px !important;
      min-height: 50px !important;
      padding: 5px 50px !important;
    }

    .announcement-bar-section .announcement-bar--one-announcement .announcement-bar__message,
    .announcement-bar-section .announcement-bar--one-announcement .announcement-bar__link,
    .announcement-bar-section .announcement-bar--one-announcement p,
    .announcement-bar-section .announcement-bar--one-announcement span {
      font-size: 13px !important;
      line-height: 1.3 !important;
      font-weight: 400 !important;
      white-space: normal !important;
      word-wrap: break-word !important;
    }

    /* Smaller arrows for mobile */
    .announcement-bar-section .slider-button {
      padding: 6px !important;
    }

    .announcement-bar-section .slider-button--prev {
      left: 10px !important;
    }

    .announcement-bar-section .slider-button--next {
      right: 10px !important;
    }

    .announcement-bar-section .slider-button svg {
      width: 14px !important;
      height: 14px !important;
    }

    /* Hide arrow icon in text on mobile */
    .announcement-bar-section .announcement-bar__link svg,
    .announcement-bar-section .announcement-bar__message svg {
      display: none !important;
    }
  }

  /* Extra small mobile devices */
  @media screen and (max-width: 480px) {
    .announcement-bar-section .slideshow__slide {
      height: 55px !important;
      min-height: 55px !important;
    }

    .announcement-bar-section .announcement-bar__announcement {
      height: 55px !important;
      min-height: 55px !important;
      padding: 5px 45px !important;
    }

    .announcement-bar-section .announcement-bar--one-announcement {
      height: 55px !important;
      min-height: 55px !important;
      padding: 5px 45px !important;
    }

    .announcement-bar-section .announcement-bar__message,
    .announcement-bar-section .announcement-bar__link,
    .announcement-bar-section p,
    .announcement-bar-section span {
      font-size: 12px !important;
      line-height: 1.3 !important;
    }

    .announcement-bar-section .announcement-bar--one-announcement .announcement-bar__message,
    .announcement-bar-section .announcement-bar--one-announcement .announcement-bar__link,
    .announcement-bar-section .announcement-bar--one-announcement p,
    .announcement-bar-section .announcement-bar--one-announcement span {
      font-size: 12px !important;
      line-height: 1.3 !important;
    }
  }
</style>

<div class="utility-bar" {{ block.shopify_attributes }}>
  <div class="utility-bar__grid">
    {%- if section.blocks.size == 1 -%}
      <div
        class="announcement-bar announcement-bar--one-announcement"
        role="region"
        aria-label="{{ 'sections.header.announcement' | t }}"
        {{ section.blocks.first.shopify_attributes }}
      >
        {%- if section.blocks.first.settings.text != blank -%}
          {%- if section.blocks.first.settings.link != blank -%}
            <a
              href="{{ section.blocks.first.settings.link }}"
              class="announcement-bar__link link link--text focus-inset animate-arrow"
            >
          {%- endif -%}
          <p class="announcement-bar__message h5">
            <span>{{ section.blocks.first.settings.text | escape }}</span>
            {%- if section.blocks.first.settings.link != blank -%}
              {{- 'icon-arrow.svg' | inline_asset_content -}}
            {%- endif -%}
          </p>
          {%- if section.blocks.first.settings.link != blank -%}
            </a>
          {%- endif -%}
        {%- endif -%}
      </div>
    {%- elsif section.blocks.size > 1 -%}
      <slideshow-component
        class="announcement-bar"
        role="region"
        aria-roledescription="{{ 'sections.announcements.carousel' | t }}"
        aria-label="{{ 'sections.announcements.announcement_bar' | t }}"
      >
        <div class="announcement-bar-slider slider-buttons">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'sections.announcements.previous_announcement' | t }}"
            aria-controls="Slider-{{ section.id }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>
          <div
            class="grid grid--1-col slider slider--everywhere"
            id="Slider-{{ section.id }}"
            aria-live="polite"
            aria-atomic="true"
            data-autoplay="{{ section.settings.auto_rotate }}"
            data-speed="{{ section.settings.change_slides_speed }}"
          >
            {%- for block in section.blocks -%}
              <div
                class="slideshow__slide slider__slide grid__item grid--1-col"
                id="Slide-{{ section.id }}-{{ forloop.index }}"
                {{ block.shopify_attributes }}
                role="group"
                aria-roledescription="{{ 'sections.announcements.announcement' | t }}"
                aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                tabindex="-1"
              >
                <div
                  class="announcement-bar__announcement"
                  role="region"
                  aria-label="{{ 'sections.header.announcement' | t }}"
                >
                  {%- if block.settings.text != blank -%}
                    {%- if block.settings.link != blank -%}
                      <a
                        href="{{ block.settings.link }}"
                        class="announcement-bar__link link link--text focus-inset animate-arrow"
                      >
                    {%- endif -%}
                    <p class="announcement-bar__message h5">
                      <span>{{ block.settings.text | escape }}</span>
                      {%- if block.settings.link != blank -%}
                        {{- 'icon-arrow.svg' | inline_asset_content -}}
                      {%- endif -%}
                    </p>
                    {%- if block.settings.link != blank -%}
                      </a>
                    {%- endif -%}
                  {%- endif -%}
                </div>
              </div>
            {%- endfor -%}
          </div>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'sections.announcements.next_announcement' | t }}"
            aria-controls="Slider-{{ section.id }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>
        </div>
      </slideshow-component>
      {%- if request.design_mode -%}
        <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
        <style>
          .announcement-bar-slider .slider__slide[aria-hidden='true'] {
            visibility: hidden;
          }
        </style>
      {%- endif -%}
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "class": "announcement-bar-section",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-4"
    },
    {
      "type": "header",
      "content": "Default Colors"
    },
    {
      "type": "color",
      "id": "default_bg_color",
      "label": "Default Background Color",
      "default": "#692909"
    },
    {
      "type": "color",
      "id": "default_text_color",
      "label": "Default Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "checkbox",
      "id": "show_line_separator",
      "default": true,
      "label": "t:sections.header.settings.show_line_separator.label"
    },
    {
      "type": "header",
      "content": "t:sections.announcement-bar.settings.header__1.content",
      "info": "t:sections.announcement-bar.settings.header__1.info"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "default": false,
      "label": "t:sections.announcement-bar.settings.show_social.label"
    },
    {
      "type": "header",
      "content": "t:sections.announcement-bar.settings.header__2.content"
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "t:sections.announcement-bar.settings.auto_rotate.label",
      "default": false
    },
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "t:sections.announcement-bar.settings.change_slides_speed.label",
      "default": 5
    },
    {
      "type": "header",
      "content": "t:sections.announcement-bar.settings.header__3.content",
      "info": "t:sections.announcement-bar.settings.header__3.info"
    },
    {
      "type": "checkbox",
      "id": "enable_country_selector",
      "default": false,
      "label": "t:sections.announcement-bar.settings.enable_country_selector.label"
    },
    {
      "type": "header",
      "content": "t:sections.announcement-bar.settings.header__4.content",
      "info": "t:sections.announcement-bar.settings.header__4.info"
    },
    {
      "type": "checkbox",
      "id": "enable_language_selector",
      "default": false,
      "label": "t:sections.announcement-bar.settings.enable_language_selector.label"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "t:sections.announcement-bar.blocks.announcement.settings.text.default",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        },
        {
          "type": "header",
          "content": "Slide Colors"
        },
        {
          "type": "color",
          "id": "slide_bg_color",
          "label": "Background Color",
          "info": "Leave empty to use default background color"
        },
        {
          "type": "color",
          "id": "slide_text_color",
          "label": "Text Color",
          "info": "Leave empty to use default text color"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.announcement-bar.presets.name",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}
