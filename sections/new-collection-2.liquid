<style>
  .product-showcase-independent {
    background-color: {{ section.settings.background_color }} !important;
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px 0;
    position: relative;
    overflow: hidden;
  }

  .product-showcase-independent .showcase-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 2;
  }

  /* Static Decorative Icons - No Floating */
  .product-showcase-independent .static-leaf-1 {
    position: absolute;
    top: {{ section.settings.leaf1_top_desktop }}%;
    left: {{ section.settings.leaf1_left_desktop }}%;
    width: {{ section.settings.leaf1_size_desktop }}px;
    z-index: 1;
    opacity: 0.8;
  }

  .product-showcase-independent .static-leaf-2 {
    position: absolute;
    top: {{ section.settings.leaf2_top_desktop }}%;
    right: {{ section.settings.leaf2_right_desktop }}%;
    width: {{ section.settings.leaf2_size_desktop }}px;
    z-index: 1;
    opacity: 0.8;
  }

  .product-showcase-independent .static-sun {
    position: absolute;
    bottom: {{ section.settings.sun_bottom_desktop }}%;
    left: {{ section.settings.sun_left_desktop }}%;
    width: {{ section.settings.sun_size_desktop }}px;
    z-index: 1;
    opacity: 0.9;
  }

  /* Section Header */
  .product-showcase-independent .showcase-header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
  }

  .product-showcase-independent .showcase-title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: bold;
    color: {{ section.settings.title_color }} !important;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .product-showcase-independent .curvy-line-icon {
    display: block;
    position: absolute;
    left: {{ section.settings.curvy_line_x_position }}%;
    transform: translateX(-50%);
    top: {{ section.settings.curvy_line_y_position }}px;
    width: {{ section.settings.curvy_line_size }}px;
    height: auto;
    z-index: 3;
  }

  .product-showcase-independent .showcase-subtitle {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.subtitle_color }} !important;
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto;
  }

  .product-showcase-independent .showcase-subtitle p {
    color: {{ section.settings.subtitle_color }} !important;
    margin: 0;
  }

  /* Navigation */
  .product-showcase-independent .showcase-navigation {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin: 2rem 0;
  }

  .product-showcase-independent .showcase-nav-arrow {
    width: 50px;
    height: 50px;
    border: 2px solid {{ section.settings.arrow_color }};
    border-radius: 50%;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 18px;
    color: {{ section.settings.arrow_color }};
  }

  .product-showcase-independent .showcase-nav-arrow:hover {
    background: {{ section.settings.arrow_color }};
    color: white;
    transform: scale(1.1);
  }

  /* Product Grid */
  .product-showcase-independent .showcase-products-grid {
    display: flex;
    gap: 2rem;
    margin-bottom: 3rem;
    overflow-x: auto;
    scroll-behavior: smooth;
    padding-bottom: 1rem;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* Internet Explorer 10+ */
    scroll-snap-type: x mandatory;
  }

  .product-showcase-independent .showcase-products-grid::-webkit-scrollbar {
    display: none; /* WebKit */
  }

  .product-showcase-independent .showcase-product-card {
    background: white;
    border-radius: {{ section.settings.card_border_radius }}px;
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
    overflow: hidden;
    transition: all 0.3s ease;
    position: relative;
    text-decoration: none;
    color: inherit;
    display: block;
    flex: 0 0 280px;
    min-width: 280px;
    scroll-snap-align: start;
    height: {{ section.settings.card_height }}px;
  }

  .product-showcase-independent .showcase-product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    text-decoration: none;
    color: inherit;
  }

  .product-showcase-independent .showcase-product-image-wrapper {
    position: relative;
    overflow: hidden;
    height: calc({{ section.settings.card_height }}px - {{ section.settings.card_info_height }}px);
  }

  .product-showcase-independent .showcase-product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-showcase-independent .showcase-product-card:hover .showcase-product-image {
    transform: scale(1.05);
  }

  .product-showcase-independent .showcase-product-info {
    padding: 1rem 1.5rem;
    text-align: left;
    height: {{ section.settings.card_info_height }}px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .product-showcase-independent .showcase-product-title {
    font-size: {{ section.settings.product_title_size }}px;
    font-weight: 600;
    color: {{ section.settings.product_title_color }} !important;
    margin: 0;
    line-height: 1.2;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-word;
    hyphens: auto;
  }

  .product-showcase-independent .showcase-product-price {
    font-size: {{ section.settings.product_price_size }}px;
    color: {{ section.settings.product_price_color }} !important;
    font-weight: 500;
    margin: 0;
    white-space: nowrap;
  }

  .product-showcase-independent .showcase-sale-price {
    color: {{ section.settings.sale_price_color }} !important;
  }

  .product-showcase-independent .showcase-original-price {
    text-decoration: line-through;
    color: #999 !important;
    margin-left: 0.5rem;
    font-size: 0.9em;
  }

  /* View All Button */
  .product-showcase-independent .showcase-view-all-wrapper {
    text-align: center;
    margin-top: 2rem;
  }

  .product-showcase-independent .showcase-view-all-btn {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    padding: 1rem 2.5rem;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_text_size }}px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .product-showcase-independent .showcase-view-all-btn:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  }

  /* Mobile Responsive */
  @media screen and (max-width: 768px) {
    .product-showcase-independent {
      padding: {{ section.settings.section_padding_top_mobile }}px 0 {{ section.settings.section_padding_bottom_mobile }}px 0;
    }

    .product-showcase-independent .showcase-container {
