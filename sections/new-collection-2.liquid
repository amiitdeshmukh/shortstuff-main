<section class="product-showcase-independent">
  <!-- Static Decorative Icons -->
  {% if section.settings.leaf_icon_1 != blank %}
    <img
      src="{{ section.settings.leaf_icon_1 | image_url: width: 200 }}"
      alt="Decorative leaf 1"
      class="static-leaf-1"
      loading="lazy"
    >
  {% endif %}

  {% if section.settings.leaf_icon_2 != blank %}
    <img
      src="{{ section.settings.leaf_icon_2 | image_url: width: 200 }}"
      alt="Decorative leaf 2"
      class="static-leaf-2"
      loading="lazy"
    >
  {% endif %}

  {% if section.settings.sun_icon != blank %}
    <img
      src="{{ section.settings.sun_icon | image_url: width: 300 }}"
      alt="Sun decoration"
      class="static-sun"
      loading="lazy"
    >
  {% endif %}

  <div class="showcase-container">
    <!-- Section Header -->
    <div class="showcase-header">
      {% if section.settings.title != blank %}
        <h2 class="showcase-title">{{ section.settings.title | escape }}</h2>
      {% endif %}

      <!-- Curvy Line Icon -->
      {% if section.settings.curvy_line_icon != blank %}
        <img
          src="{{ section.settings.curvy_line_icon | image_url: width: 400 }}"
          alt="Decorative curvy line"
          class="curvy-line-icon"
          loading="lazy"
        >
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <div class="showcase-subtitle">{{ section.settings.subtitle }}</div>
      {% endif %}

      <!-- Navigation Controls -->
      {% if section.settings.show_navigation %}
        <div class="showcase-navigation">
          <button class="showcase-nav-arrow nav-prev" onclick="scrollShowcaseProducts(-1)">&#8249;</button>
          <button class="showcase-nav-arrow nav-next" onclick="scrollShowcaseProducts(1)">&#8250;</button>
        </div>
      {% endif %}
    </div>

    <!-- Products Grid -->
    <div class="showcase-products-grid" id="showcaseProductsGrid">
      {% assign collection = collections[section.settings.collection] %}
      {% assign products_to_show = section.settings.products_to_show | default: 8 %}

      {% if collection != blank %}
        {% for product in collection.products limit: products_to_show %}
          <a href="{{ product.url }}" class="showcase-product-card">
            <div class="showcase-product-image-wrapper">
              {% if product.featured_image != blank %}
                <img
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  alt="{{ product.featured_image.alt | default: product.title }}"
                  class="showcase-product-image"
                  loading="lazy"
                >
              {% else %}
                <div
                  class="showcase-product-image"
                  style="background-color: #f5f5f5; display: flex; align-items: center; justify-content: center; color: #999;"
                >
                  No Image
                </div>
              {% endif %}
            </div>

            <div class="showcase-product-info">
              <h3 class="showcase-product-title">{{ product.title | escape }}</h3>

              <div class="showcase-product-price">
                {% if product.compare_at_price > product.price %}
                  <span class="showcase-sale-price">{{ product.price | money }}</span>
                  <span class="showcase-original-price">{{ product.compare_at_price | money }}</span>
                {% else %}
                  {{ product.price | money }}
                {% endif %}
              </div>
            </div>
          </a>
        {% endfor %}
      {% else %}
        <!-- Fallback when no collection is selected -->
        {% for product in collections.all.products limit: products_to_show %}
          <a href="{{ product.url }}" class="showcase-product-card">
            <div class="showcase-product-image-wrapper">
              {% if product.featured_image != blank %}
                <img
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  alt="{{ product.featured_image.alt | default: product.title }}"
                  class="showcase-product-image"
                  loading="lazy"
                >
              {% else %}
                <div
                  class="showcase-product-image"
                  style="background-color: #f5f5f5; display: flex; align-items: center; justify-content: center; color: #999;"
                >
                  No Image
                </div>
              {% endif %}
            </div>

            <div class="showcase-product-info">
              <h3 class="showcase-product-title">{{ product.title | escape }}</h3>

              <div class="showcase-product-price">
                {% if product.compare_at_price > product.price %}
                  <span class="showcase-sale-price">{{ product.price | money }}</span>
                  <span class="showcase-original-price">{{ product.compare_at_price | money }}</span>
                {% else %}
                  {{ product.price | money }}
                {% endif %}
              </div>
            </div>
          </a>
        {% endfor %}
      {% endif %}
    </div>

    <!-- View All Button -->
    {% if section.settings.show_view_all and section.settings.view_all_text != blank %}
      <div class="showcase-view-all-wrapper">
        {% assign view_all_url = section.settings.view_all_collection.url | default: '/collections/all' %}
        <a href="{{ view_all_url }}" class="showcase-view-all-btn">
          {{ section.settings.view_all_text | escape }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<script>
  let currentShowcaseScrollPosition = 0;

  function scrollShowcaseProducts(direction) {
    const grid = document.getElementById('showcaseProductsGrid');
    const cards = grid.querySelectorAll('.showcase-product-card');

    if (cards.length === 0) return;

    // Get card width including gap
    const cardStyle = window.getComputedStyle(cards[0]);
    const cardWidth = parseInt(cardStyle.width);
    const gridStyle = window.getComputedStyle(grid);
    const gap = parseInt(gridStyle.gap) || 32; // fallback to 2rem = 32px

    const scrollDistance = cardWidth + gap;

    // Calculate new position
    currentShowcaseScrollPosition += (scrollDistance * direction);

    // Get container and total scroll width
    const containerWidth = grid.clientWidth;
    const totalScrollWidth = grid.scrollWidth;
    const maxScroll = totalScrollWidth - containerWidth;

    // Constrain scroll position
    if (currentShowcaseScrollPosition < 0) {
      currentShowcaseScrollPosition = 0;
    } else if (currentShowcaseScrollPosition > maxScroll) {
      currentShowcaseScrollPosition = maxScroll;
    }

    // Scroll to exact position
    grid.scrollTo({
      left: currentShowcaseScrollPosition,
      behavior: 'smooth'
    });
  }

  // Update current position when user manually scrolls
  document.addEventListener('DOMContentLoaded', function() {
    const grid = document.getElementById('showcaseProductsGrid');
    if (grid) {
      grid.addEventListener('scroll', function() {
        currentShowcaseScrollPosition = grid.scrollLeft;
      });
    }
  });
</script>

