    }

    .product-showcase-independent .curvy-line-icon {
      width: {{ section.settings.curvy_line_size_mobile }}px;
      top: {{ section.settings.curvy_line_y_position_mobile }}px;
      left: {{ section.settings.curvy_line_x_position_mobile }}%;
    }

    .product-showcase-independent .showcase-subtitle {
      font-size: {{ section.settings.subtitle_size | times: 0.9 }}px;
    }

    .product-showcase-independent .showcase-products-grid {
      gap: 1.5rem;
    }

    .product-showcase-independent .showcase-product-card {
      flex: 0 0 250px;
      min-width: 250px;
