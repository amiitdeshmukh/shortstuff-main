      left: {{ section.settings.star4_left_mobile }}% !important;
      width: {{ section.settings.star4_size_mobile }}px !important;
    }
  }

  /* Tablet */
  @media screen and (min-width: 769px) and (max-width: 1024px) {
    .email-subscribe-independent {
      min-height: 280px;
    }

    .email-subscribe-independent .email-content-wrapper {
      gap: 2rem;
    }

    .email-subscribe-independent .email-form {
      flex-direction: column;
      gap: 1rem;
    }

    .email-subscribe-independent .email-input,
    .email-subscribe-independent .email-subscribe-button {
      width: 100%;
    }
  }
</style>

<section class="email-subscribe-independent">
  <!-- Static Star Icons -->
  {% if section.settings.star_icon_1 != blank %}
    <img
      src="{{ section.settings.star_icon_1 | image_url: width: 100 }}"
      alt="Star decoration 1"
      class="static-star-1"
      loading="lazy"
    >
  {% endif %}

  {% if section.settings.star_icon_2 != blank %}
    <img
      src="{{ section.settings.star_icon_2 | image_url: width: 100 }}"
      alt="Star decoration 2"
      class="static-star-2"
      loading="lazy"
    >
  {% endif %}

  {% if section.settings.star_icon_3 != blank %}
    <img
      src="{{ section.settings.star_icon_3 | image_url: width: 100 }}"
      alt="Star decoration 3"
      class="static-star-3"
      loading="lazy"
    >
  {% endif %}

  {% if section.settings.star_icon_4 != blank %}
    <img
      src="{{ section.settings.star_icon_4 | image_url: width: 100 }}"
      alt="Star decoration 4"
      class="static-star-4"
      loading="lazy"
    >
  {% endif %}

  <div class="email-container">
    <div class="email-content-wrapper">
      <!-- Left Content -->
      <div class="email-content-left">
        {% if section.settings.title != blank %}
          <h2 class="email-section-title">{{ section.settings.title | escape }}</h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <p class="email-section-description">{{ section.settings.description | escape }}</p>
        {% endif %}
      </div>

      <!-- Right Content - Email Form -->
      <div class="email-content-right">
        <form
          class="email-form"
          action="{{ routes.root_url }}contact#contact_form"
          method="post"
          id="contact_form"
          accept-charset="UTF-8"
        >
          <input type="hidden" name="form_type" value="customer">
          <input type="hidden" name="utf8" value="âœ“">

          <input
            type="email"
            name="contact[email]"
            class="email-input"
            placeholder="{{ section.settings.placeholder_text | default: 'Enter Your Email' }}"
            required
            autocomplete="email"
          >

          <button type="submit" class="email-subscribe-button">
            {{ section.settings.button_text | default: 'SUBSCRIBE NOW' }}
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

