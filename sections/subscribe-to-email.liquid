<style>
  .email-subscribe-independent {
    background-color: {{ section.settings.background_color }};
    position: relative;
    overflow: hidden;
    background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}');
    background-size: cover;
    background-position: center top;
    background-repeat: no-repeat;
    min-height: 300px;
    display: flex;
    align-items: flex-end;
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px 0;
    border-top-left-radius: {{ section.settings.section_border_radius_top }}px;
    border-top-right-radius: {{ section.settings.section_border_radius_top }}px;
    border-bottom-left-radius: {{ section.settings.section_border_radius_bottom }}px;
    border-bottom-right-radius: {{ section.settings.section_border_radius_bottom }}px;
  }

  .email-subscribe-independent .email-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 3;
  }

  /* Static Star Icons - No Floating */
  .email-subscribe-independent .static-star-1 {
    position: absolute;
    top: {{ section.settings.star1_top }}%;
    left: {{ section.settings.star1_left }}%;
    width: {{ section.settings.star1_size }}px;
    z-index: 2;
  }

  .email-subscribe-independent .static-star-2 {
    position: absolute;
    top: {{ section.settings.star2_top }}%;
    right: {{ section.settings.star2_right }}%;
    width: {{ section.settings.star2_size }}px;
    z-index: 2;
  }

  .email-subscribe-independent .static-star-3 {
    position: absolute;
    top: {{ section.settings.star3_top }}%;
    right: {{ section.settings.star3_right }}%;
    width: {{ section.settings.star3_size }}px;
    z-index: 2;
  }

  .email-subscribe-independent .static-star-4 {
    position: absolute;
    bottom: {{ section.settings.star4_bottom }}%;
    left: {{ section.settings.star4_left }}%;
    width: {{ section.settings.star4_size }}px;
    z-index: 2;
  }

  /* Content positioned at bottom */
  .email-subscribe-independent .email-content-wrapper {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    gap: 3rem;
    width: 100%;
    position: relative;
  }

  .email-subscribe-independent .email-content-left {
    flex: 1;
  }

  .email-subscribe-independent .email-section-title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: bold;
    color: {{ section.settings.title_color }};
    margin-bottom: 0.1rem;
    line-height: 1.2;
  }

  /* Curvy Line Icon */
  .email-subscribe-independent .email-curvy-line-icon {
    display: none;
  }

  .email-subscribe-independent .email-section-description {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    line-height: 1.2;
    margin-bottom: 0;
  }

  .email-subscribe-independent .email-content-right {
    flex: 1;
    max-width: 500px;
  }

  /* Email Form */
  .email-subscribe-independent .email-form {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .email-subscribe-independent .email-input {
    flex: 1;
    padding: 1rem 1.5rem;
    border: 2px solid {{ section.settings.input_border_color }};
    border-radius: {{ section.settings.input_border_radius }}px;
    font-size: {{ section.settings.input_text_size }}px;
    background: {{ section.settings.input_bg_color }};
    color: {{ section.settings.input_text_color }};
    transition: all 0.3s ease;
  }

  .email-subscribe-independent .email-input:focus {
    outline: none;
    border-color: {{ section.settings.input_focus_border_color }};
    box-shadow: 0 0 0 3px {{ section.settings.input_focus_border_color }}20;
  }

  .email-subscribe-independent .email-input::placeholder {
    color: {{ section.settings.placeholder_color }};
  }

  .email-subscribe-independent .email-subscribe-button {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    padding: 1rem 2rem;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_text_size }}px;
    font-weight: 600;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .email-subscribe-independent .email-subscribe-button:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  }

  /* Mobile Responsive */
  @media screen and (max-width: 768px) {
    .email-subscribe-independent {
      min-height: 280px;
      background-image: none !important;
      background-color: {{ section.settings.mobile_bg_color }} !important;
      padding: {{ section.settings.section_padding_top_mobile }}px 0 {{ section.settings.section_padding_bottom_mobile }}px 0;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .email-subscribe-independent .email-container {
      padding: 0 1rem;
      min-height: auto;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
    }

    .email-subscribe-independent .email-content-wrapper {
      flex-direction: column;
      gap: 1.5rem;
      text-align: center;
      width: 100%;
      align-items: center;
      justify-content: center;
    }

    .email-subscribe-independent .email-content-left,
    .email-subscribe-independent .email-content-right {
      max-width: 100%;
    }

    .email-subscribe-independent .email-section-title {
      font-size: {{ section.settings.title_size | times: 0.75 }}px;
      margin-bottom: 0.1rem;
    }

    .email-subscribe-independent .email-section-description {
      font-size: {{ section.settings.description_size | times: 0.85 }}px;
      margin-bottom: 1rem;
    }

    .email-subscribe-independent .email-form {
      flex-direction: column;
      gap: 1rem;
      width: 100%;
    }

    .email-subscribe-independent .email-input {
      width: 100%;
      padding: 0.875rem 1.25rem;
      font-size: {{ section.settings.input_text_size | times: 0.9 }}px;
    }

    .email-subscribe-independent .email-subscribe-button {
      width: 100%;
      padding: 0.875rem 1.5rem;
      font-size: {{ section.settings.button_text_size | times: 0.9 }}px;
    }

    .email-subscribe-independent .static-star-1 {
      top: {{ section.settings.star1_top_mobile }}% !important;
      left: {{ section.settings.star1_left_mobile }}% !important;
      width: {{ section.settings.star1_size_mobile }}px !important;
    }

    .email-subscribe-independent .static-star-2 {
      top: {{ section.settings.star2_top_mobile }}% !important;
      right: {{ section.settings.star2_right_mobile }}% !important;
      width: {{ section.settings.star2_size_mobile }}px !important;
    }

    .email-subscribe-independent .static-star-3 {
      top: {{ section.settings.star3_top_mobile }}% !important;
      right: {{ section.settings.star3_right_mobile }}% !important;
      width: {{ section.settings.star3_size_mobile }}px !important;
    }

    .email-subscribe-independent .static-star-4 {
