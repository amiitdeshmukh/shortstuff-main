{% schema %}
{
  "name": "Short Stuff Love",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Short Stuff Love"
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Upload Video",
          "info": "Upload a video file (MP4, MOV, or WebM recommended)."
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Video Description",
          "default": "Check out this amazing video from our community!"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Short Stuff Love",
      "category": "Custom",
      "blocks": [
        {
          "type": "video"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="short-stuff-love-section">
  <h2>{{ section.settings.title }}</h2>
  {% if section.blocks.size > 0 %}
    <div class="video-grid">
      {% for block in section.blocks %}
        {% if block.settings.video != blank %}
          <div class="video-container">
            {{ block.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: true, playsinline: true }}
            {% if block.settings.description != blank %}
              <p class="video-description">{{ block.settings.description }}</p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  {% else %}
    <p>No videos uploaded yet. Please add videos in the theme customizer.</p>
  {% endif %}
</div>

<style>
  .short-stuff-love-section {
    padding: 40px 20px;
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }
  .short-stuff-love-section h2 {
    font-size: 2em;
    margin-bottom: 20px;
  }
  .video-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }
  .video-container {
    flex: 1;
    min-width: 250px;
    max-width: 266px;
    margin-bottom: 20px;
  }
  .video-container video {
    width: 100%;
    height: 474px;
    max-width: 266px;
    max-height: 474px;
    aspect-ratio: 9 / 16;
    object-fit: contain;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }
  .video-description {
    font-size: 1em;
    color: #666;
    margin-top: 10px;
  }

  @media (max-width: 768px) {
    .video-container {
      min-width: 200px;
      max-width: 200px;
    }
    .video-container video {
      height: 356px;
      max-width: 200px;
      max-height: 356px;
    }
  }
  @media (max-width: 480px) {
    .video-container {
      min-width: 160px;
      max-width: 160px;
    }
    .video-container video {
      height: 284px;
      max-width: 160px;
      max-height: 284px;
    }
  }
</style>