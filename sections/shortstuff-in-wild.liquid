<style>
  .instagram-section {
    background-color: {{ section.settings.background_color }};
    border-radius: 60px 60px 0 0;
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    position: relative;
    overflow: hidden;
    min-height: auto;
  }

  .instagram-container {
    max-width: 1441px;
    margin: 0 auto;
    padding: 0 37px;
    position: relative;
    z-index: 2;
  }

  /* Static Decorative Icons - No Floating */
  .instagram-section .static-leaf-1 {
    position: absolute;
    top: {{ section.settings.leaf1_top_desktop }}%;
    left: {{ section.settings.leaf1_left_desktop }}%;
    width: {{ section.settings.leaf1_size_desktop }}px;
    z-index: 1;
    opacity: 0.8;
  }

  .instagram-section .static-leaf-2 {
    position: absolute;
    top: {{ section.settings.leaf2_top_desktop }}%;
    right: {{ section.settings.leaf2_right_desktop }}%;
    width: {{ section.settings.leaf2_size_desktop }}px;
    z-index: 1;
    opacity: 0.8;
  }

  .instagram-section .static-sun {
    position: absolute;
    bottom: {{ section.settings.sun_bottom_desktop }}%;
    left: {{ section.settings.sun_left_desktop }}%;
    width: {{ section.settings.sun_size_desktop }}px;
    z-index: 1;
    opacity: 0.9;
  }

  /* Header Layout - Three Column */
  .instagram-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 40px;
    gap: 40px;
  }

  /* Left Column - Title & Description */
  .instagram-content-left {
    flex: 1 1 0;
    max-width: 543px;
  }

  .instagram-title {
    font-family: 'Nunito', sans-serif;
    font-size: {{ section.settings.title_size }}px;
    font-weight: 800;
    color: {{ section.settings.title_color }};
    margin: 0 0 9px 0;
    line-height: 1.2;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .instagram-description {
    font-family: 'Source Serif 4', serif;
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    line-height: 1.6;
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Center Column - Follower Count */
  .instagram-stats {
    flex: 1 1 0;
    text-align: center;
    padding-top: 0;
  }

  .instagram-count {
    font-family: 'Nunito', sans-serif;
    font-size: {{ section.settings.count_size }}px;
    font-weight: 800;
    color: {{ section.settings.title_color }};
    margin: 0 0 9px 0;
    line-height: 1.2;
  }

  .instagram-label {
    font-family: 'Source Serif 4', serif;
    font-size: {{ section.settings.label_size }}px;
    color: {{ section.settings.description_color }};
    margin: 0;
  }

  /* Right Column - CTA Button */
  .instagram-cta {
    flex: 1 1 0;
    margin-left: auto;
    display: flex;
    justify-content: flex-end;
    align-items: flex-start;
  }

  .instagram-button {
    font-family: 'Source Serif 4', serif;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    border-radius: 50px;
    font-size: {{ section.settings.button_text_size }}px;
    font-weight: 700;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    white-space: nowrap;
  }

  .instagram-button:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    text-decoration: none;
    color: {{ section.settings.button_text_color }};
  }

  /* Gallery - Horizontal Row */
  .instagram-gallery {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    overflow-y: visible;
    padding-bottom: 20px;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }

  .instagram-gallery::-webkit-scrollbar {
    display: none;
  }

  .instagram-gallery-item {
    flex: 0 0 {{ section.settings.image_width }}px;
    width: {{ section.settings.image_width }}px;
    height: {{ section.settings.image_height }}px;
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
    position: relative;
    background: white;
  }

  .instagram-gallery-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .instagram-gallery-item a {
    display: block;
    width: 100%;
    height: 100%;
  }

  /* Mobile Responsive */
  @media screen and (max-width: 768px) {
    .instagram-section {
      border-radius: {{ section.settings.mobile_border_radius }}px {{ section.settings.mobile_border_radius }}px 0 0;
      padding-top: {{ section.settings.section_padding_top_mobile }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_mobile }}px;
      min-height: auto;
    }

    .instagram-container {
      padding: 0 20px;
    }

    .instagram-header {
      flex-direction: column;
      gap: 20px;
      margin-bottom: {{ section.settings.gallery_spacing_mobile }}px;
      text-align: center;
      align-items: center;
    }

    .instagram-content-left {
      max-width: 100%;
      order: 1;
      text-align: center;
    }

    .instagram-title {
      font-size: {{ section.settings.title_size | times: 0.7 }}px;
      white-space: normal;
    }

    .instagram-description {
      font-size: {{ section.settings.description_size | times: 0.9 }}px;
      white-space: normal;
    }

    .instagram-stats {
      order: 2;
      text-align: center;
      width: 100%;
    }

    .instagram-count {
      font-size: {{ section.settings.count_size | times: 0.8 }}px;
    }

    .instagram-label {
      font-size: {{ section.settings.label_size | times: 0.9 }}px;
    }

    .instagram-cta {
      order: 3;
      margin-left: 0;
      width: 100%;
      text-align: center;
      justify-content: center;
    }

    .instagram-button {
      font-size: {{ section.settings.button_text_size | times: 0.9 }}px;
      padding: {{ section.settings.button_padding_vertical | times: 0.9 }}px {{ section.settings.button_padding_horizontal | times: 0.8 }}px;
    }

    .instagram-gallery {
      gap: 15px;
      margin: 0 -20px;
      padding: 0 20px 20px 20px;
    }

    .instagram-gallery-item {
      flex: 0 0 {{ section.settings.image_width_mobile }}px;
      width: {{ section.settings.image_width_mobile }}px;
      height: {{ section.settings.image_height_mobile }}px;
    }

    .instagram-section .static-leaf-1 {
      top: {{ section.settings.leaf1_top_mobile }}% !important;
      left: {{ section.settings.leaf1_left_mobile }}% !important;
      width: {{ section.settings.leaf1_size_mobile }}px !important;
    }

    .instagram-section .static-leaf-2 {
      top: {{ section.settings.leaf2_top_mobile }}% !important;
      right: {{ section.settings.leaf2_right_mobile }}% !important;
      width: {{ section.settings.leaf2_size_mobile }}px !important;
    }

    .instagram-section .static-sun {
      bottom: {{ section.settings.sun_bottom_mobile }}% !important;
      left: {{ section.settings.sun_left_mobile }}% !important;
      width: {{ section.settings.sun_size_mobile }}px !important;
    }
  }

  /* Tablet */
  @media screen and (min-width: 769px) and (max-width: 1024px) {
    .instagram-container {
      padding: 0 30px;
    }

    .instagram-header {
      flex-wrap: wrap;
    }

    .instagram-content-left {
      flex: 1 1 100%;
      max-width: 100%;
      margin-bottom: 20px;
    }

    .instagram-stats {
      flex: 1 1 auto;
    }

    .instagram-gallery-item {
      flex: 0 0 280px;
      width: 280px;
      height: 350px;
    }
  }
</style>

<section class="instagram-section">
  <!-- Static Decorative Icons -->
  {% if section.settings.leaf_icon_1 != blank %}
    <img
      src="{{ section.settings.leaf_icon_1 | image_url: width: 200 }}"
      alt="Decorative leaf 1"
      class="static-leaf-1"
      loading="lazy"
    >
  {% endif %}

  {% if section.settings.leaf_icon_2 != blank %}
    <img
      src="{{ section.settings.leaf_icon_2 | image_url: width: 200 }}"
      alt="Decorative leaf 2"
      class="static-leaf-2"
      loading="lazy"
    >
  {% endif %}

  {% if section.settings.sun_icon != blank %}
    <img
      src="{{ section.settings.sun_icon | image_url: width: 300 }}"
      alt="Sun decoration"
      class="static-sun"
      loading="lazy"
    >
  {% endif %}

  <div class="instagram-container">
    <!-- Header with 3 columns -->
    <div class="instagram-header">
      <!-- Left: Title & Description -->
      <div class="instagram-content-left">
        {% if section.settings.title != blank %}
          <h2 class="instagram-title">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.description != blank %}
          <p class="instagram-description">{{ section.settings.description }}</p>
        {% endif %}
      </div>

      <!-- Center: Follower Count -->
      <div class="instagram-stats">
        {% if section.settings.follower_count != blank %}
          <p class="instagram-count">{{ section.settings.follower_count }}</p>
        {% endif %}
        {% if section.settings.follower_label != blank %}
          <p class="instagram-label">{{ section.settings.follower_label }}</p>
        {% endif %}
      </div>

      <!-- Right: CTA Button -->
      <div class="instagram-cta">
        {% if section.settings.button_text != blank %}
          <a
            href="{{ section.settings.button_link | default: '#' }}"
            class="instagram-button"
            target="_blank"
            rel="noopener"
          >
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>

    <!-- Gallery - Horizontal Row -->
    <div class="instagram-gallery">
      {% for block in section.blocks %}
        <div class="instagram-gallery-item" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" target="_blank" rel="noopener">
                <img
                  src="{{ block.settings.image | image_url: width: 700 }}"
                  alt="{{ block.settings.image.alt | default: 'Instagram photo' }}"
                  class="instagram-gallery-image"
                  loading="lazy"
                >
              </a>
            {% else %}
              <img
                src="{{ block.settings.image | image_url: width: 700 }}"
                alt="{{ block.settings.image.alt | default: 'Instagram photo' }}"
                class="instagram-gallery-image"
                loading="lazy"
              >
            {% endif %}
          {% else %}
            <div
              class="instagram-gallery-image"
              style="background-color: #f5f5f5; display: flex; align-items: center; justify-content: center; color: #999; font-size: 14px;"
            >
              Upload Image
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

