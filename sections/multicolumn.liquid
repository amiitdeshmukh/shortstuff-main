      left: {{ section.settings.sun_left_mobile | default: 2 }}% !important;
      width: {{ section.settings.sun_size_mobile | default: 80 }}px !important;
      top: auto !important;
      right: auto !important;
    }
  }

  /* Very small screens */
  @media screen and (max-width: 480px) {
    .why-youll-love-them-features .features-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>

<section class="why-youll-love-them-features">
  {% if section.settings.leaf_icon_1 != blank %}
    <img
      src="{{ section.settings.leaf_icon_1 | image_url: width: 200 }}"
      alt="Decorative leaf 1"
      class="static-leaf-1"
      loading="lazy"
    >
  {% endif %}

  {% if section.settings.leaf_icon_2 != blank %}
    <img
      src="{{ section.settings.leaf_icon_2 | image_url: width: 200 }}"
      alt="Decorative leaf 2"
      class="static-leaf-2"
      loading="lazy"
    >
  {% endif %}

  {% if section.settings.sun_icon != blank %}
    <img
      src="{{ section.settings.sun_icon | image_url: width: 300 }}"
      alt="Sun decoration"
      class="static-sun"
      loading="lazy"
    >
  {% endif %}

  <div class="features-container">
    <div class="features-header">
      {% if section.settings.section_title != blank %}
        <h2 class="features-title">{{ section.settings.section_title | escape }}</h2>
      {% endif %}

      {% if section.settings.curvy_line_icon != blank %}
        <img
          src="{{ section.settings.curvy_line_icon | image_url: width: 400 }}"
          alt="Decorative curvy line"
          class="curvy-line-icon"
          loading="lazy"
        >
      {% endif %}

      {% if section.settings.section_subtitle != blank %}
        <div class="features-subtitle">{{ section.settings.section_subtitle }}</div>
      {% endif %}
    </div>

    <div class="features-grid">
      {% for block in section.blocks %}
        {% if block.type == 'feature' %}
          <div class="feature-item" {{ block.shopify_attributes }}>
            <div class="feature-image-wrapper">
              {% if block.settings.image != blank %}
                <img
                  src="{{ block.settings.image | image_url: width: 650 }}"
                  alt="{{ block.settings.image.alt | default: block.settings.title }}"
                  class="feature-image"
                  loading="lazy"
                >
              {% else %}
                <div
                  class="feature-image"
                  style="background-color: #f5f5f5; display: flex; align-items: center; justify-content: center; color: #999; border-radius: {{ section.settings.image_radius }}px; min-height: 200px;"
                >
                  Add Image
                </div>
              {% endif %}
            </div>

            {% if block.settings.title != blank %}
              <h3 class="feature-title">{{ block.settings.title | escape }}</h3>
            {% endif %}
            
            {% comment %} The 'p' tag was removed and replaced with a div to properly render richtext content {% endcomment %}
            {% if block.settings.description != blank %}
              <div class="feature-description">{{ block.settings.description }}</div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

