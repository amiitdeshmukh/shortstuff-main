<style>
  .why-youll-love-them-features {
    {% if section.settings.bg_image != blank %}
      background-image: url('{{ section.settings.bg_image | image_url: width: 1920 }}');
      background-size: {{ section.settings.bg_size }};
      background-position: {{ section.settings.bg_position }};
      background-repeat: {{ section.settings.bg_repeat }};
      background-attachment: {{ section.settings.bg_attachment }};
      {% if section.settings.enable_bg_overlay %}
        position: relative;
      {% endif %}
    {% elsif section.settings.enable_bg_gradient %}
      background: linear-gradient({{ section.settings.bg_gradient_direction }}deg, {{ section.settings.bg_gradient_color_1 }} 0%, {{ section.settings.bg_gradient_color_2 }} 100%) !important;
    {% else %}
      background-color: {{ section.settings.bg_color }} !important;
    {% endif %}
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    position: relative;
    overflow: hidden;
  }

  /* Background Overlay */
  {% if section.settings.bg_image != blank and section.settings.enable_bg_overlay %}
  .why-youll-love-them-features::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: {{ section.settings.overlay_bg_color }};
    opacity: {{ section.settings.overlay_opacity_value | divided_by: 100.0 }};
    z-index: 1;
    pointer-events: none;
  }
  {% endif %}

  .why-youll-love-them-features .features-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 2;
  }

  /* Static Decorative Icons - Desktop positioning */
  .why-youll-love-them-features .static-leaf-1 {
    position: absolute !important;
    top: {{ section.settings.leaf1_top_desktop | default: 15 }}% !important;
    left: {{ section.settings.leaf1_left_desktop | default: 8 }}% !important;
    width: {{ section.settings.leaf1_size_desktop | default: 80 }}px !important;
    z-index: 1;
    opacity: 0.8;
    right: auto !important;
    bottom: auto !important;
  }

  .why-youll-love-them-features .static-leaf-2 {
    position: absolute !important;
    top: {{ section.settings.leaf2_top_desktop | default: 20 }}% !important;
    right: {{ section.settings.leaf2_right_desktop | default: 10 }}% !important;
    width: {{ section.settings.leaf2_size_desktop | default: 90 }}px !important;
    z-index: 1;
    opacity: 0.8;
    left: auto !important;
    bottom: auto !important;
  }

  .why-youll-love-them-features .static-sun {
    position: absolute !important;
    bottom: {{ section.settings.sun_bottom_desktop | default: 15 }}% !important;
    left: {{ section.settings.sun_left_desktop | default: 4 }}% !important;
    width: {{ section.settings.sun_size_desktop | default: 120 }}px !important;
    z-index: 1;
    opacity: 0.9;
    top: auto !important;
    right: auto !important;
  }

  .why-youll-love-them-features .curvy-line-icon {
    display: block;
    position: absolute;
    left: {{ section.settings.curvy_line_x_position }}%;
    transform: translateX(-50%);
    top: {{ section.settings.curvy_line_y_position }}px;
    width: {{ section.settings.curvy_line_size }}px;
    height: auto;
    z-index: 3;
  }

  /* Section Header */
  .why-youll-love-them-features .features-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
  }

  .why-youll-love-them-features .features-title {
    font-size: {{ section.settings.main_title_size }}px;
    font-weight: bold;
    color: {{ section.settings.main_title_color }} !important;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .why-youll-love-them-features .features-subtitle {
    font-size: {{ section.settings.main_subtitle_size }}px;
    color: {{ section.settings.main_subtitle_color }} !important;
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto;
  }

  .why-youll-love-them-features .features-subtitle p {
    color: {{ section.settings.main_subtitle_color }} !important;
    margin: 0;
  }

  /* Features Grid - Updated for 325px card width */
  .why-youll-love-them-features .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(325px, 1fr));
    gap: 2.5rem;
    justify-content: center;
  }

  /* Force specific columns on desktop based on container width */
  @media screen and (min-width: 1400px) {
    .why-youll-love-them-features .features-grid {
      grid-template-columns: repeat(4, 325px);
    }
  }

  @media screen and (min-width: 1100px) and (max-width: 1399px) {
    .why-youll-love-them-features .features-grid {
      grid-template-columns: repeat(3, 325px);
    }
  }

  @media screen and (min-width: 800px) and (max-width: 1099px) {
    .why-youll-love-them-features .features-grid {
      grid-template-columns: repeat(2, 325px);
    }
  }

  .why-youll-love-them-features .feature-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    width: 325px;
    justify-self: center;
  }

  .why-youll-love-them-features .feature-image-wrapper {
    position: relative;
    width: 100%;
    margin-bottom: 1.5rem;
    transition: transform 0.3s ease;
  }

  .why-youll-love-them-features .feature-image-wrapper:hover {
    transform: translateY(-5px);
  }

  .why-youll-love-them-features .feature-image {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: {{ section.settings.image_radius }}px;
    display: block;
  }

  .why-youll-love-them-features .feature-title {
    font-size: {{ section.settings.card_title_size }}px;
    font-weight: 600;
    font-family: inherit;
    color: {{ section.settings.card_title_color }} !important;
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
  }

  .why-youll-love-them-features .feature-description {
    font-size: {{ section.settings.card_description_size }}px;
    color: {{ section.settings.card_description_color }} !important;
    line-height: 1.5;
    margin: 0;
  }

  /* Mobile Responsive */
  @media screen and (max-width: 768px) {
    .why-youll-love-them-features {
      padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px 0;
    }

    .why-youll-love-them-features .features-container {
      padding: 0 1rem;
    }

    .why-youll-love-them-features .features-title {
      font-size: {{ section.settings.main_title_size | times: 0.8 }}px;
    }

    .why-youll-love-them-features .curvy-line-icon {
      width: {{ section.settings.curvy_line_size_mobile }}px;
      top: {{ section.settings.curvy_line_y_position_mobile }}px;
      left: {{ section.settings.curvy_line_x_position_mobile }}%;
    }

    .why-youll-love-them-features .features-subtitle {
      font-size: {{ section.settings.main_subtitle_size | times: 0.9 }}px;
    }

    .why-youll-love-them-features .features-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .why-youll-love-them-features .feature-item {
      width: 100%;
    }

    .why-youll-love-them-features .feature-image-wrapper {
      margin-bottom: 1rem;
    }

    .why-youll-love-them-features .feature-title {
      font-size: {{ section.settings.card_title_size | times: 0.9 }}px;
    }

    .why-youll-love-them-features .feature-description {
      font-size: {{ section.settings.card_description_size | times: 0.9 }}px;
    }

    /* Mobile icon overrides - Fixed positioning */
    .why-youll-love-them-features .static-leaf-1 {
      position: absolute !important;
      top: {{ section.settings.leaf1_top_mobile | default: 10 }}% !important;
      left: {{ section.settings.leaf1_left_mobile | default: 4 }}% !important;
      width: {{ section.settings.leaf1_size_mobile | default: 50 }}px !important;
